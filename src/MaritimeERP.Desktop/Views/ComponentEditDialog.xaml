<Window x:Class="MaritimeERP.Desktop.Views.ComponentEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaritimeERP.Desktop.Views"
        mc:Ignorable="d"
        Title="Edit Component" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Component Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="System Name" Margin="0,5"/>
                <TextBox Text="{Binding SystemName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Component Type" Margin="0,5"/>
                <TextBox Text="{Binding ComponentType, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Name" Margin="0,5"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Manufacturer" Margin="0,5"/>
                <TextBox Text="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Model" Margin="0,5"/>
                <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Installed Location" Margin="0,5"/>
                <TextBox Text="{Binding InstalledLocation, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="OS Name" Margin="0,5"/>
                <TextBox Text="{Binding OsName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="OS Version" Margin="0,5"/>
                <TextBox Text="{Binding OsVersion, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="USB Ports" Margin="0,5"/>
                <TextBox Text="{Binding UsbPorts, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="LAN Ports" Margin="0,5"/>
                <TextBox Text="{Binding LanPorts, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Connected CBs" Margin="0,5"/>
                <TextBox Text="{Binding ConnectedCbs, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Network Segment" Margin="0,5"/>
                <TextBox Text="{Binding NetworkSegment, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Supported Protocols" Margin="0,5"/>
                <TextBox Text="{Binding SupportedProtocols, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Connection Purpose" Margin="0,5"/>
                <TextBox Text="{Binding ConnectionPurpose, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <CheckBox Content="Has Remote Connection" IsChecked="{Binding HasRemoteConnection}" Margin="0,5,0,10"/>
                <CheckBox Content="Is Type Approved" IsChecked="{Binding IsTypeApproved}" Margin="0,5,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Command="{Binding SaveComponentCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80"/>
            </StackPanel>
    </Grid>
</Window> 