<Window x:Class="MaritimeERP.Desktop.Views.ComponentEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Component Details" Height="580" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="FormSectionStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FAFAFA"/>
        </Style>
        
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="FormControlStyle" TargetType="FrameworkElement">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3E8E41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#757575"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="16,12" Margin="-24,-24,-24,16" CornerRadius="4,4,0,0">
            <StackPanel>
                <TextBlock Text="🔧 Component Details" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Add or edit component information" 
                           FontSize="12" 
                           Foreground="#757575"/>
            </StackPanel>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="Basic Information" Style="{StaticResource FormSectionStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Ship Selection -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,0">
                            <TextBlock Text="Ship" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Ships}"
                                      SelectedItem="{Binding SelectedShip}"
                                      DisplayMemberPath="ShipName"
                                      Style="{StaticResource FormControlStyle}"
                                      BorderBrush="#E0E0E0"
                                      BorderThickness="1"/>
                        </StackPanel>

                        <!-- System Selection -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,0">
                            <TextBlock Text="System" Style="{StaticResource FormLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Systems}"
                                      SelectedItem="{Binding SelectedSystem}"
                                      DisplayMemberPath="DisplayName"
                                      Style="{StaticResource FormControlStyle}"
                                      BorderBrush="#E0E0E0"
                                      BorderThickness="1"/>
                        </StackPanel>

                        <!-- Component Name -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                            <TextBlock Text="Component Name" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding ComponentName}"
                                     Style="{StaticResource FormControlStyle}"
                                     Padding="8"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Maker/Model -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                            <TextBlock Text="Maker/Model" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding MakerModel}"
                                     Style="{StaticResource FormControlStyle}"
                                     Padding="8"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Installation Details -->
                <GroupBox Header="Installation Details" Style="{StaticResource FormSectionStyle}">
                    <StackPanel>
                        <!-- Installed Location -->
                        <StackPanel>
                            <TextBlock Text="Installed Location" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding InstalledLocation}"
                                     Style="{StaticResource FormControlStyle}"
                                     Padding="8"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Connected CBs -->
                        <StackPanel>
                            <TextBlock Text="Connected CBs" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding ConnectedCbs}"
                                     Height="60"
                                     Margin="0,0,0,12"
                                     Padding="8"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Remote Connection -->
                        <StackPanel>
                            <CheckBox Content="Has Remote Connection"
                                      IsChecked="{Binding HasRemoteConnection}"
                                      FontSize="12"
                                      Margin="0,0,0,8"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Port Configuration -->
                <GroupBox Header="Port Configuration" Style="{StaticResource FormSectionStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- USB Ports -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="USB Ports" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding UsbPorts}"
                                     Style="{StaticResource FormControlStyle}"
                                     Padding="8"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- LAN Ports -->
                        <StackPanel Grid.Column="1" Margin="4,0">
                            <TextBlock Text="LAN Ports" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding LanPorts}"
                                     Style="{StaticResource FormControlStyle}"
                                     Padding="8"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Serial Ports -->
                        <StackPanel Grid.Column="2" Margin="8,0,0,0">
                            <TextBlock Text="Serial Ports" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox Text="{Binding SerialPorts}"
                                     Style="{StaticResource FormControlStyle}"
                                     Padding="8"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="16,12" Margin="-24,16,-24,-24" CornerRadius="0,0,4,4">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton"
                        Content="💾 Save Component"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="SaveButton_Click"
                        Margin="0,0,8,0"/>
                <Button x:Name="CancelButton"
                        Content="❌ Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 