<UserControl x:Class="MaritimeERP.Desktop.Views.AuditLogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1976D2" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“‹" FontSize="24" VerticalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Auditable Logs" FontSize="20" FontWeight="SemiBold" 
                               Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Export" Command="{Binding ExportLogsCommand}"
                            Background="#0D47A1" Foreground="White" 
                            BorderThickness="0" Padding="16,8" Margin="0,0,8,0"
                            FontWeight="Medium"/>
                    <Button Content="Refresh" Command="{Binding RefreshCommand}"
                            Background="#0D47A1" Foreground="White" 
                            BorderThickness="0" Padding="16,8" 
                            FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Logs -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,8,0" Padding="16">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding TotalLogs}" FontSize="28" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Logs" FontSize="12" Foreground="#757575" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Filtered Count -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="4,0" Padding="16">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding FilteredLogCount}" FontSize="28" FontWeight="Bold" Foreground="#388E3C" HorizontalAlignment="Center"/>
                        <TextBlock Text="Filtered" FontSize="12" Foreground="#757575" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Today's Logs -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" Margin="4,0" Padding="16">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding TodaysLogs}" FontSize="28" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                        <TextBlock Text="Today" FontSize="12" Foreground="#757575" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Status -->
                <Border Grid.Column="3" Background="White" CornerRadius="8" Margin="8,0,0,0" Padding="16">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="#757575" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        <ProgressBar IsIndeterminate="{Binding IsLoading}" Height="4" Margin="0,8,0,0" 
                                     Background="#E0E0E0" Foreground="#1976D2"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Quick Filter Buttons -->
        <Border Grid.Row="2" Background="#FAFAFA" Padding="16,12">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    <ItemsControl ItemsSource="{Binding LogTypeFilters}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.ApplyLogTypeFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Background="#E3F2FD" Foreground="#1976D2" 
                                        BorderThickness="1" BorderBrush="#1976D2"
                                        Padding="12,6" Margin="0,0,8,0" 
                                        FontWeight="Medium" ToolTip="{Binding Description}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}" FontSize="12" VerticalAlignment="Center" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filters Panel -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,8,0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <TextBlock Text="Filters" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>

                        <!-- Entity Type Filter -->
                        <Label Content="Entity Type:" FontWeight="Medium" Margin="0,8,0,4"/>
                        <ComboBox ItemsSource="{Binding EntityTypes}" SelectedItem="{Binding SelectedEntityType}"
                                  Height="32" Padding="8,6" BorderBrush="#BDBDBD"/>

                        <!-- Action Filter -->
                        <Label Content="Action:" FontWeight="Medium" Margin="0,8,0,4"/>
                        <ComboBox ItemsSource="{Binding Actions}" SelectedItem="{Binding SelectedAction}"
                                  Height="32" Padding="8,6" BorderBrush="#BDBDBD"/>

                        <!-- User Filter -->
                        <Label Content="User:" FontWeight="Medium" Margin="0,8,0,4"/>
                        <ComboBox ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}"
                                  DisplayMemberPath="FullName" Height="32" Padding="8,6" BorderBrush="#BDBDBD"/>

                        <!-- Date Range Filter -->
                        <Label Content="Start Date:" FontWeight="Medium" Margin="0,16,0,4"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Height="32" Padding="8,6" BorderBrush="#BDBDBD"/>

                        <Label Content="End Date:" FontWeight="Medium" Margin="0,8,0,4"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Height="32" Padding="8,6" BorderBrush="#BDBDBD"/>

                        <!-- Clear Filters Button -->
                        <Button Content="Clear Filters" Command="{Binding ClearFiltersCommand}"
                                Background="#757575" Foreground="White" BorderThickness="0"
                                Padding="16,8" Margin="0,16,0,0" FontWeight="Medium"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Logs DataGrid -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="8,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- DataGrid Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="16,12" CornerRadius="8,8,0,0">
                        <TextBlock Text="Audit Logs" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredAuditLogs}" SelectedItem="{Binding SelectedAuditLog}"
                              AutoGenerateColumns="False" CanUserAddRows="False" 
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                              Background="White" BorderThickness="0" Margin="1"
                              AlternatingRowBackground="#F8F9FA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimestampDisplay}" Width="140"/>
                            <DataGridTextColumn Header="Entity Type" Binding="{Binding EntityType}" Width="120"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding ActionDisplay}" Width="100"/>
                            <DataGridTextColumn Header="Entity" Binding="{Binding EntityDisplay}" Width="150"/>
                            <DataGridTextColumn Header="User" Binding="{Binding UserDisplay}" Width="120"/>
                            <DataGridTextColumn Header="Additional Info" Binding="{Binding AdditionalInfo}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 