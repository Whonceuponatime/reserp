<UserControl x:Class="MaritimeERP.Desktop.Views.SystemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FAFAFA">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Inverse Boolean to Visibility Converter -->
        <Style x:Key="InverseVisibilityStyle" TargetType="FrameworkElement">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24" CornerRadius="8" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="âš™ï¸ Systems Management" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Manage ship systems, components, and equipment" 
                           FontSize="14" 
                           Foreground="#757575"/>
            </StackPanel>
        </Border>

        <!-- Search and Filter Controls -->
        <Border Grid.Row="1" Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Search Systems" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Padding="8"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- Ship Filter -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                    <TextBlock Text="Filter by Ship" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Ships}"
                              SelectedValue="{Binding FilterShipId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="ShipName"
                              Height="32"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>
                </StackPanel>

                <!-- Category Filter -->
                <StackPanel Grid.Column="2" Margin="16,0,0,0">
                    <TextBlock Text="Filter by Category" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Categories}"
                              SelectedValue="{Binding FilterCategoryId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Height="32"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>
                </StackPanel>

                <!-- Manufacturer Filter -->
                <StackPanel Grid.Column="3" Margin="16,0,0,0">
                    <TextBlock Text="Filter by Manufacturer" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Manufacturers}"
                              SelectedItem="{Binding FilterManufacturer}"
                              Height="32"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Command="{Binding ClearFiltersCommand}"
                            Content="Clear Filters"
                            Background="#757575"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            Margin="8,0"/>
                    <Button Command="{Binding AddSystemCommand}"
                            Content="âž• Add System"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            Margin="8,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Systems List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" 
                            Background="#1976D2"
                            Padding="16,12"
                            CornerRadius="8,8,0,0">
                        <TextBlock Text="Systems List" 
                                   FontWeight="Medium" 
                                   FontSize="16"
                                   Foreground="White"/>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Systems}"
                              SelectedItem="{Binding SelectedSystem}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#E0E0E0"
                              AlternatingRowBackground="#F9F9F9"
                              RowBackground="White"
                              HeadersVisibility="Column"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="System Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Ship" 
                                                Binding="{Binding Ship.ShipName}" 
                                                Width="150"/>
                            <DataGridTextColumn Header="Category" 
                                                Binding="{Binding Category.Name}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Manufacturer" 
                                                Binding="{Binding Manufacturer}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Model" 
                                                Binding="{Binding Model}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Serial Number" 
                                                Binding="{Binding SerialNumber}" 
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- System Details Form -->
            <Border Grid.Column="2" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Form Header -->
                    <Border Grid.Row="0" 
                            Background="#FF9800"
                            Padding="16,12"
                            CornerRadius="8,8,0,0">
                        <TextBlock Text="System Details" 
                                   FontWeight="Medium" 
                                   FontSize="16"
                                   Foreground="White"/>
                    </Border>

                    <!-- Form Content -->
                    <ScrollViewer Grid.Row="1" Padding="16" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Ship Selection -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Ship" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Ships}"
                                          SelectedItem="{Binding SelectedShip}"
                                          DisplayMemberPath="ShipName"
                                          IsEnabled="{Binding IsEditing}"
                                          Height="32"
                                          BorderBrush="#E0E0E0"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- System Name -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="System Name" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding SystemName}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="32"
                                         Padding="8"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <!-- Manufacturer -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Manufacturer" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Manufacturer}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="32"
                                         Padding="8"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <!-- Model -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Model" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Model}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="32"
                                         Padding="8"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <!-- Serial Number -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Serial Number" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding SerialNumber}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="32"
                                         Padding="8"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"/>
                            </StackPanel>

                            <!-- Category -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Category" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Categories}"
                                          SelectedItem="{Binding SelectedCategory}"
                                          DisplayMemberPath="Name"
                                          IsEnabled="{Binding IsEditing}"
                                          Height="32"
                                          BorderBrush="#E0E0E0"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- Security Zone -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Security Zone" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding SecurityZones}"
                                          SelectedItem="{Binding SelectedSecurityZone}"
                                          DisplayMemberPath="Name"
                                          IsEnabled="{Binding IsEditing}"
                                          Height="32"
                                          BorderBrush="#E0E0E0"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- Description -->
                            <StackPanel>
                                <TextBlock Text="Description" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Description}"
                                         IsEnabled="{Binding IsEditing}"
                                         AcceptsReturn="True"
                                         MinHeight="60"
                                         Padding="8"
                                         BorderBrush="#E0E0E0"
                                         BorderThickness="1"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Form Actions -->
                    <Border Grid.Row="2" 
                            Background="#F5F5F5"
                            Padding="16"
                            CornerRadius="0,0,8,8">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <!-- Edit Button -->
                            <Button Command="{Binding EditSystemCommand}"
                                    Content="ðŸ“ Edit"
                                    Background="#1976D2"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="32"
                                    Padding="12,0"
                                    Margin="4,0"
                                    Style="{StaticResource InverseVisibilityStyle}"/>

                            <!-- Save Button -->
                            <Button Command="{Binding SaveSystemCommand}"
                                    Content="ðŸ’¾ Save"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="32"
                                    Padding="12,0"
                                    Margin="4,0"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <!-- Cancel Button -->
                            <Button Command="{Binding CancelEditCommand}"
                                    Content="âŒ Cancel"
                                    Background="#757575"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="32"
                                    Padding="12,0"
                                    Margin="4,0"
                                    Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <!-- Delete Button -->
                            <Button Command="{Binding DeleteSystemCommand}"
                                    Content="ðŸ—‘ï¸ Delete"
                                    Background="#D32F2F"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="32"
                                    Padding="12,0"
                                    Margin="4,0"
                                    Style="{StaticResource InverseVisibilityStyle}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="White" Padding="16,8" CornerRadius="8" Margin="0,16,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center"
                           FontSize="14"
                           Foreground="#757575"/>

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="100" 
                                 Height="4"
                                 Margin="16,0,0,0"/>
                    <TextBlock Text="Loading..." 
                               FontSize="12" 
                               Foreground="#757575" 
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl> 