<UserControl x:Class="MaritimeERP.Desktop.Views.SystemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FAFAFA">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Inverse Boolean to Visibility Converter -->
        <Style x:Key="InverseVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Compact Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="16,10"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Systems" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="Manage ship systems and equipment"
                               FontSize="12"
                               Foreground="#757575"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="+ Add System" 
                            Command="{Binding AddSystemCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="16,0"
                            FontSize="12"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ—‚ï¸ Import" 
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            FontSize="12"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ“Š Export" 
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Split View -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Systems List -->
            <Border Grid.Column="0" 
                    Background="White"
                    Padding="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            Padding="12,8"
                            Margin="0,0,8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Height="24"
                                     Padding="6,0"
                                     FontSize="12"
                                     Background="White"
                                     BorderThickness="1"
                                     BorderBrush="#E0E0E0"/>
                            
                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding Ships}"
                                      SelectedItem="{Binding SelectedShip}"
                                      DisplayMemberPath="ShipName"
                                      Height="24"
                                      Padding="6,0"
                                      FontSize="12"
                                      Background="White"
                                      BorderThickness="1"
                                      BorderBrush="#E0E0E0"
                                      Margin="8,0,0,0">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Style.Triggers>
                                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                                <Setter Property="Text" Value="All Ships"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>

                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Active Only" 
                                           FontSize="11"
                                           Foreground="#757575"
                                           VerticalAlignment="Center"/>
                                <CheckBox IsChecked="{Binding ShowActiveOnly}"
                                          Margin="6,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Systems DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding FilteredSystems}"
                              SelectedItem="{Binding SelectedSystem}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              Background="White"
                              BorderThickness="0"
                              RowHeight="26"
                              FontSize="12"
                              Margin="0,0,8,0"
                              MouseDoubleClick="DataGrid_MouseDoubleClick">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#424242"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Height" Value="32"/>
                                <Setter Property="Padding" Value="8,0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="System Name" 
                                                Binding="{Binding Name}"
                                                Width="150"
                                                MinWidth="120"/>
                            <DataGridTextColumn Header="Ship"
                                                Binding="{Binding Ship.ShipName}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Manufacturer"
                                                Binding="{Binding Manufacturer}"
                                                Width="100"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="Model"
                                                Binding="{Binding Model}"
                                                Width="100"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="Serial Number"
                                                Binding="{Binding SerialNumber}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Category"
                                                Binding="{Binding Category.Name}"
                                                Width="100"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="Updated"
                                                Binding="{Binding UpdatedAt, StringFormat='{}{0:MM/dd/yyyy}'}"
                                                Width="*"
                                                MinWidth="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" 
                            Background="#F5F5F5" 
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding StatusMessage}"
                                       FontSize="11"
                                       Foreground="#757575"
                                       VerticalAlignment="Center"/>

                            <ProgressBar Grid.Column="1" 
                                         Width="80" 
                                         Height="12" 
                                         IsIndeterminate="True" 
                                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         Margin="0,0,8,0"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Showing: " 
                                           FontSize="11"
                                           Foreground="#757575"/>
                                <TextBlock Text="{Binding FilteredSystems.Count}" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#1976D2"/>
                                <TextBlock Text=" of " 
                                           FontSize="11"
                                           Foreground="#757575"/>
                                <TextBlock Text="{Binding TotalSystems}" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#1976D2"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- System Details Panel -->
            <Border Grid.Column="1" 
                    Background="White"
                    BorderThickness="1,0,0,0"
                    BorderBrush="#E0E0E0"
                    Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="System Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,16"/>

                        <!-- System Form -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- System Name -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                <TextBlock Text="System Name" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding SystemName, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="24"
                                         Padding="8,0"
                                         FontSize="12"
                                         Background="#F5F5F5"
                                         BorderThickness="1"
                                         BorderBrush="#E0E0E0"/>
                            </StackPanel>

                            <!-- Ship Selection -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                <TextBlock Text="Ship" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Ships}"
                                          SelectedItem="{Binding SelectedShip, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="ShipName"
                                          IsEnabled="{Binding IsEditing}"
                                          Height="24"
                                          Padding="8,0"
                                          FontSize="12"
                                          Background="#F5F5F5"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0"/>
                            </StackPanel>

                            <!-- Manufacturer -->
                            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                                <TextBlock Text="Manufacturer" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Manufacturers}"
                                          SelectedItem="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                                          IsEditable="True"
                                          Text="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding IsEditing}"
                                          Height="24"
                                          Padding="8,0"
                                          FontSize="12"
                                          Background="#F5F5F5"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0"/>
                            </StackPanel>

                            <!-- Model -->
                            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                                <TextBlock Text="Model" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="24"
                                         Padding="8,0"
                                         FontSize="12"
                                         Background="#F5F5F5"
                                         BorderThickness="1"
                                         BorderBrush="#E0E0E0"/>
                            </StackPanel>

                            <!-- Serial Number -->
                            <StackPanel Grid.Row="4" Margin="0,0,0,12">
                                <TextBlock Text="Serial Number" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="24"
                                         Padding="8,0"
                                         FontSize="12"
                                         Background="#F5F5F5"
                                         BorderThickness="1"
                                         BorderBrush="#E0E0E0"/>
                            </StackPanel>

                            <!-- Description -->
                            <StackPanel Grid.Row="5" Margin="0,0,0,12">
                                <TextBlock Text="Description" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Description}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="60"
                                         Padding="8,4"
                                         FontSize="12"
                                         Background="#F5F5F5"
                                         BorderThickness="1"
                                         BorderBrush="#E0E0E0"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"/>
                            </StackPanel>

                            <!-- Has Remote Connection -->
                            <StackPanel Grid.Row="6" Margin="0,0,0,12">
                                <TextBlock Text="Remote Connection" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <CheckBox IsChecked="{Binding HasRemoteConnection}"
                                          IsEnabled="{Binding IsEditing}"
                                          Content="System has remote connection capability"
                                          FontSize="12"
                                          Foreground="#424242"/>
                            </StackPanel>

                            <!-- Category -->
                            <StackPanel Grid.Row="7" Margin="0,0,0,12">
                                <TextBlock Text="Category" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Categories}"
                                          SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="Name"
                                          IsEnabled="{Binding IsEditing}"
                                          Height="24"
                                          Padding="8,0"
                                          FontSize="12"
                                          Background="#F5F5F5"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0"/>
                            </StackPanel>

                            <!-- Security Zone -->
                            <StackPanel Grid.Row="8" Margin="0,0,0,12">
                                <TextBlock Text="Security Zone (Optional)" FontSize="11" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding SecurityZoneText, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding IsEditing}"
                                         Height="24"
                                         Padding="8,0"
                                         FontSize="12"
                                         Background="#F5F5F5"
                                         BorderThickness="1"
                                         BorderBrush="#E0E0E0"
                                         Watermark="Enter security zone (e.g., Bridge, Engine Room)"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="9" Orientation="Vertical" Margin="0,12,0,0">
                                <Button Content="Save System" 
                                        Command="{Binding SaveSystemCommand}"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#CCCCCC"/>
                                                    <Setter Property="Opacity" Value="0.7"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Edit System" 
                                        Command="{Binding EditSystemCommand}"
                                        Background="#1976D2"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                <Button Content="Delete System" 
                                        Command="{Binding DeleteSystemCommand}"
                                        Background="#D32F2F"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                <Button Content="Cancel" 
                                        Command="{Binding CancelEditCommand}"
                                        Background="#757575"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl> 