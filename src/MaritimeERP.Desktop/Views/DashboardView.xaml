<UserControl x:Class="MaritimeERP.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA">

    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Compact Header -->
            <Border Grid.Row="0" Background="White" Padding="12,8" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                        <TextBlock Text="Maritime ERP System Overview - Use refresh button or data automatically updates when changes occur"
                               FontSize="11"
                               Foreground="#757575"
                               Margin="0,1,0,0"/>
                </StackPanel>
                    
                    <Button Grid.Column="1"
                            Content="🔄 Refresh"
                            Command="{Binding RefreshCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Height="28"
                            ToolTip="Refresh dashboard data manually"/>
                </Grid>
            </Border>

            <!-- Compact Statistics Cards -->
            <Grid Grid.Row="1" Margin="8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ships Card (Clickable) -->
                <Button Grid.Column="0" 
                        Background="White" 
                        Padding="12,8"
                        Margin="0,0,4,0"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#1976D2"
                        Command="{Binding ViewShipsCommand}"
                        ToolTip="Click to view Ships"
                        Cursor="Hand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="🚢" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#1976D2"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalShips}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#1976D2"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Ships" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Button>

                <!-- Systems Card (Clickable) -->
                <Button Grid.Column="1" 
                        Background="White" 
                        Padding="12,8"
                        Margin="0,0,4,0"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#4CAF50"
                        Command="{Binding ViewSystemsCommand}"
                        ToolTip="Click to view Systems"
                        Cursor="Hand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="⚙️" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#4CAF50"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalSystems}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#4CAF50"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Systems" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Button>

                <!-- Components Card (Clickable) -->
                <Button Grid.Column="2" 
                        Background="White" 
                        Padding="12,8"
                        Margin="0,0,4,0"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#FF9800"
                        Command="{Binding ViewComponentsCommand}"
                        ToolTip="Click to view Components"
                        Cursor="Hand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="🔧" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#FF9800"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalComponents}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#FF9800"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Components" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Button>

                <!-- Alerts Card (Clickable for admins) -->
                <Button Grid.Column="3" 
                        Background="White" 
                        Padding="12,8"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#F44336"
                        Command="{Binding ViewPendingDocumentsCommand}"
                        ToolTip="Click to view pending items (Admin only)"
                        Cursor="Hand"
                        IsEnabled="{Binding IsAdmin}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="⚠️" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#F44336"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding ActiveAlerts}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#F44336"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Alerts" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Button>
            </Grid>

            <!-- Admin-specific Pending Items (Visible only to admins) -->
            <Grid Grid.Row="2" Margin="8,4" Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Pending Documents Card -->
                <Button Grid.Column="0" 
                        Background="#FFF3E0" 
                        Padding="8,6"
                        Margin="0,0,4,0"
                        BorderThickness="1"
                        BorderBrush="#FF9800"
                        Command="{Binding ViewPendingDocumentsCommand}"
                        ToolTip="Click to view pending documents"
                        Cursor="Hand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="📄" 
                                   FontSize="20" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"
                                   Foreground="#FF9800"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding PendingDocuments}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#FF9800"/>
                            <TextBlock Text="Pending Documents" 
                                       FontSize="10" 
                                       Foreground="#757575"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Pending Change Requests Card -->
                <Button Grid.Column="1" 
                        Background="#E8F5E8" 
                        Padding="8,6"
                        Margin="0,0,4,0"
                        BorderThickness="1"
                        BorderBrush="#4CAF50"
                        Command="{Binding ViewPendingChangeRequestsCommand}"
                        ToolTip="Click to view pending change requests"
                        Cursor="Hand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="📝" 
                                   FontSize="20" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"
                                   Foreground="#4CAF50"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding PendingChangeRequests}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#4CAF50"/>
                            <TextBlock Text="Pending Change Requests" 
                                       FontSize="10" 
                                       Foreground="#757575"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- System Health Card -->
                <Border Grid.Column="2" 
                        Background="#E3F2FD" 
                        Padding="8,6"
                        Margin="0,0,4,0"
                        BorderThickness="1"
                        BorderBrush="#2196F3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="💚" 
                                   FontSize="20" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding SystemHealth, StringFormat='{}{0}%'}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#2196F3"/>
                            <TextBlock Text="System Health" 
                                       FontSize="10" 
                                       Foreground="#757575"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Active Systems Card -->
                <Border Grid.Column="3" 
                        Background="#F3E5F5" 
                        Padding="8,6"
                        BorderThickness="1"
                        BorderBrush="#9C27B0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="🔄" 
                                   FontSize="20" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"
                                   Foreground="#9C27B0"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding ActiveSystems}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#9C27B0"/>
                            <TextBlock Text="Active Systems" 
                                       FontSize="10" 
                                       Foreground="#757575"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Compact Content Panels -->
            <Grid Grid.Row="3" Margin="8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Activity -->
                <Border Grid.Column="0" 
                        Background="White" 
                        Padding="12,8"
                        Margin="0,0,4,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Recent Activity" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,6"/>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      Height="160">
                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                                Padding="8,6" 
                                                Margin="0,0,0,4"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Icon}" 
                                                           FontSize="14" 
                                                           VerticalAlignment="Center" 
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding Description}" 
                                                           FontSize="12" 
                                                           VerticalAlignment="Center" 
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding TimeAgo}" 
                                                           FontSize="11" 
                                                           Foreground="#757575" 
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- System Status -->
                <Border Grid.Column="1" 
                        Background="White" 
                        Padding="12,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="System Status" 
                                   FontSize="15" 
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,6"/>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      Height="160">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Database Connection" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <Ellipse Grid.Column="1" 
                                             Width="8" 
                                             Height="8" 
                                             Fill="#4CAF50"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Active Systems" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding ActiveSystems}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,4,0"/>
                                        <TextBlock Text="/" 
                                                   FontSize="12" 
                                                   Foreground="#757575" 
                                                   Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding TotalSystems}" 
                                                   FontSize="12" 
                                                   Foreground="#757575"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="System Health" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Column="1" 
                                                 Value="{Binding SystemHealth}" 
                                                 Maximum="100" 
                                                 Height="12" 
                                                 Background="#E0E0E0" 
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding SystemHealth, StringFormat='{}{0}%'}" 
                                               FontSize="12" 
                                               FontWeight="SemiBold" 
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Enhanced Quick Actions -->
            <Border Grid.Row="4" 
                    Background="White" 
                    Padding="12,8"
                    Margin="8,4,8,8"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Quick Actions" 
                               FontSize="15" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"
                               Margin="0,0,0,8"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Navigation Actions -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Navigate to:" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Foreground="#666" 
                                       Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="🚢 Ships" 
                                        Command="{Binding ViewShipsCommand}"
                                Background="#1976D2"
                                Foreground="White"
                                BorderThickness="0"
                                Height="28"
                                Padding="10,0"
                                FontSize="11"
                                        Margin="0,0,6,0"
                                        ToolTip="View and manage ships"/>
                                <Button Content="⚙️ Systems" 
                                        Command="{Binding ViewSystemsCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Height="28"
                                Padding="10,0"
                                FontSize="11"
                                        Margin="0,0,6,0"
                                        ToolTip="View and manage systems"/>
                                <Button Content="🔧 Components" 
                                        Command="{Binding ViewComponentsCommand}"
                                Background="#FF9800"
                                Foreground="White"
                                BorderThickness="0"
                                Height="28"
                                Padding="10,0"
                                        FontSize="11"
                                        ToolTip="View and manage components"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Admin Actions - Pending Items -->
                        <Grid Grid.Column="1" Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Pending Documents -->
                            <StackPanel Grid.Column="0" Margin="0,0,2,0">
                                <TextBlock Text="📄 Pending Documents" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Foreground="#666" 
                                           Margin="0,0,0,4"/>
                                
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                              Height="120"
                                              Margin="0,0,0,4"
                                              CanContentScroll="False"
                                              PanningMode="VerticalOnly">
                                    <ItemsControl ItemsSource="{Binding PendingDocumentsList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                                                                        <Border Background="#FFF3E0" 
                                                        BorderBrush="#FF9800" 
                                                        BorderThickness="1" 
                                                        CornerRadius="3" 
                                                        Margin="0,0,0,2" 
                                                        Padding="4,3">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontSize="10" 
                                                                       FontWeight="SemiBold" 
                                                                       Foreground="#E65100"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding Ship.ShipName}" 
                                                                       FontSize="9" 
                                                                       Foreground="#757575"/>
                                                        </StackPanel>
                                                        
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                                            <Button Content="👁️" 
                                                                    Command="{Binding DataContext.ViewDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip="View"
                                                                    Width="18" Height="18" 
                                                                    FontSize="9"
                                                                    Background="Transparent" 
                                                                    BorderThickness="0"
                                                                    Margin="1,0"/>
                                                            <Button Content="✅" 
                                                                    Command="{Binding DataContext.ApproveDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip="Approve"
                                                                    Width="18" Height="18" 
                                                                    FontSize="9"
                                                                    Background="Transparent" 
                                                                    BorderThickness="0"
                                                                    Margin="1,0"/>
                                                            <Button Content="❌" 
                                                                    Command="{Binding DataContext.RejectDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip="Reject"
                                                                    Width="18" Height="18" 
                                                                    FontSize="9"
                                                                    Background="Transparent" 
                                                                    BorderThickness="0"
                                                                    Margin="1,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                
                                <Button Content="View All Documents" 
                                        Command="{Binding ViewPendingDocumentsCommand}"
                                        Background="#9C27B0"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="22"
                                        Padding="8,0"
                                        FontSize="10"
                                        ToolTip="Go to Documents page"/>
                            </StackPanel>
                            
                            <!-- Pending Change Requests -->
                            <StackPanel Grid.Column="1" Margin="2,0,0,0">
                                <TextBlock Text="📝 Pending Change Requests" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Foreground="#666" 
                                           Margin="0,0,0,4"/>
                                
                                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                              Height="120"
                                              Margin="0,0,0,4"
                                              CanContentScroll="False"
                                              PanningMode="VerticalOnly">
                                    <ItemsControl ItemsSource="{Binding PendingChangeRequestsList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                                                                        <Border Background="#E8F5E8" 
                                                        BorderBrush="#4CAF50" 
                                                        BorderThickness="1" 
                                                        CornerRadius="3" 
                                                        Margin="0,0,0,2" 
                                                        Padding="4,3">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding RequestNo}" 
                                                                       FontSize="10" 
                                                                       FontWeight="SemiBold" 
                                                                       Foreground="#2E7D32"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding Ship.ShipName}" 
                                                                       FontSize="9" 
                                                                       Foreground="#757575"/>
                                                        </StackPanel>
                                                        
                                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                                            <Button Content="👁️" 
                                                                    Command="{Binding DataContext.ViewChangeRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip="View"
                                                                    Width="18" Height="18" 
                                                                    FontSize="9"
                                                                    Background="Transparent" 
                                                                    BorderThickness="0"
                                                                    Margin="1,0"/>
                                                            <Button Content="✅" 
                                                                    Command="{Binding DataContext.ApproveChangeRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip="Approve"
                                                                    Width="18" Height="18" 
                                                                    FontSize="9"
                                                                    Background="Transparent" 
                                                                    BorderThickness="0"
                                                                    Margin="1,0"/>
                                                            <Button Content="❌" 
                                                                    Command="{Binding DataContext.RejectChangeRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip="Reject"
                                                                    Width="18" Height="18" 
                                                                    FontSize="9"
                                                                    Background="Transparent" 
                                                                    BorderThickness="0"
                                                                    Margin="1,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                
                                <Button Content="View All Change Requests" 
                                        Command="{Binding ViewPendingChangeRequestsCommand}"
                                        Background="#607D8B"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="22"
                                        Padding="8,0"
                                        FontSize="10"
                                        ToolTip="Go to Change Requests page"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="5" 
                    Background="#80000000" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    CornerRadius="4">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="80" 
                                 Height="12" 
                                 Margin="0,0,0,8"/>
                    <TextBlock Text="Loading dashboard..." 
                               Foreground="White" 
                               FontSize="10" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl> 