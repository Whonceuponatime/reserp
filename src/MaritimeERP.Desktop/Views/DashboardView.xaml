<UserControl x:Class="MaritimeERP.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA">

    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="24" CornerRadius="8" Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="📊 Dashboard" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Welcome to Maritime ERP System - Overview of your fleet and operations" 
                                   FontSize="14" 
                                   Foreground="#757575"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Command="{Binding RefreshCommand}"
                            Content="🔄 Refresh"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="36"
                            Padding="16,0"
                            VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Ships Card -->
                <Border Grid.Column="0" Background="White" Padding="20" CornerRadius="8" Margin="0,0,8,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Ships" FontSize="14" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding TotalShips}" FontSize="32" FontWeight="Bold" Foreground="#1976D2"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="🚢" FontSize="24" VerticalAlignment="Center" Foreground="#1976D2"/>
                        </Grid>
                        <TextBlock Text="{Binding ActiveShips, StringFormat='{}{0} Active'}" 
                                   FontSize="12" 
                                   Foreground="#4CAF50" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total Systems Card -->
                <Border Grid.Column="1" Background="White" Padding="20" CornerRadius="8" Margin="4,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Ship Systems" FontSize="14" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding TotalSystems}" FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="⚙️" FontSize="24" VerticalAlignment="Center" Foreground="#FF9800"/>
                        </Grid>
                        <TextBlock Text="Installed Systems" 
                                   FontSize="12" 
                                   Foreground="#757575" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Total Tonnage Card -->
                <Border Grid.Column="2" Background="White" Padding="20" CornerRadius="8" Margin="4,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Tonnage" FontSize="14" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding TotalTonnage, StringFormat='{}{0:N0}'}" FontSize="32" FontWeight="Bold" Foreground="#9C27B0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="⚖️" FontSize="24" VerticalAlignment="Center" Foreground="#9C27B0"/>
                        </Grid>
                        <TextBlock Text="Gross Tons" 
                                   FontSize="12" 
                                   Foreground="#757575" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Recent Changes Card -->
                <Border Grid.Column="3" Background="White" Padding="20" CornerRadius="8" Margin="8,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Recent Updates" FontSize="14" Foreground="#757575" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding RecentChanges}" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="📝" FontSize="24" VerticalAlignment="Center" Foreground="#4CAF50"/>
                        </Grid>
                        <TextBlock Text="Last 30 Days" 
                                   FontSize="12" 
                                   Foreground="#757575" 
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Info Cards -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Fleet Overview -->
                <Border Grid.Column="0" Background="White" Padding="20" CornerRadius="8" Margin="0,0,8,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Fleet Overview" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Most Common Type:" FontSize="14" Foreground="#757575"/>
                            <TextBlock Grid.Column="1" Text="{Binding MostCommonShipType}" FontSize="14" FontWeight="Medium" HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Newest Ship:" FontSize="14" Foreground="#757575"/>
                            <TextBlock Grid.Column="1" Text="{Binding NewestShip}" FontSize="14" FontWeight="Medium" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Column="1" Background="White" Padding="20" CornerRadius="8" Margin="8,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,16"/>
                        
                        <Button Command="{Binding ViewShipsCommand}"
                                Background="#E3F2FD"
                                Foreground="#1976D2"
                                BorderThickness="0"
                                Height="40"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚢" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Manage Fleet" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ViewSystemsCommand}"
                                Background="#FFF3E0"
                                Foreground="#FF9800"
                                BorderThickness="0"
                                Height="40"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Manage Systems" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Bottom Section - Recent Activity and Charts -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Activity -->
                <Border Grid.Column="0" Background="White" Padding="20" CornerRadius="8" Margin="0,0,8,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Recent Activity" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,16"/>
                        
                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" Padding="12" Margin="0,0,0,8" CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Icon}" 
                                                           FontSize="16" 
                                                           VerticalAlignment="Top" 
                                                           Margin="0,0,8,0"/>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}" 
                                                               FontSize="13" 
                                                               FontWeight="Medium" 
                                                               Margin="0,0,0,2"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                               FontSize="11" 
                                                               Foreground="#757575" 
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding TimeAgo}" 
                                                           FontSize="10" 
                                                           Foreground="#757575" 
                                                           VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Ship Type Statistics -->
                <Border Grid.Column="1" Background="White" Padding="20" CornerRadius="8" Margin="8,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Ship Type Distribution" FontSize="18" FontWeight="SemiBold" Foreground="#1976D2" Margin="0,0,0,16"/>
                        
                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding ShipTypeStatistics}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" Padding="16" Margin="0,0,0,8" CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding ShipType}" 
                                                           FontSize="14" 
                                                           FontWeight="Medium" 
                                                           VerticalAlignment="Center"/>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0">
                                                    <TextBlock Text="{Binding Count}" 
                                                               FontSize="16" 
                                                               FontWeight="Bold" 
                                                               Foreground="#1976D2"/>
                                                    <TextBlock Text=" ships" 
                                                               FontSize="12" 
                                                               Foreground="#757575" 
                                                               VerticalAlignment="Bottom" 
                                                               Margin="2,0,0,1"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding TotalTonnage, StringFormat='{}{0:N0}'}" 
                                                               FontSize="14" 
                                                               Foreground="#757575"/>
                                                    <TextBlock Text=" GT" 
                                                               FontSize="12" 
                                                               Foreground="#757575" 
                                                               VerticalAlignment="Bottom" 
                                                               Margin="2,0,0,1"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="4" 
                    Background="#80000000" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    CornerRadius="8">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="100" 
                                 Height="4" 
                                 Margin="0,0,0,16"/>
                    <TextBlock Text="Loading dashboard..." 
                               Foreground="White" 
                               FontSize="14" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl> 