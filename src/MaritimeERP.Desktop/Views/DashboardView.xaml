<UserControl x:Class="MaritimeERP.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA">

    <UserControl.Resources>
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Compact Header -->
            <Border Grid.Row="0" Background="White" Padding="16,10" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                <StackPanel>
                    <TextBlock Text="Dashboard" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="Maritime ERP System Overview"
                               FontSize="12"
                               Foreground="#757575"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- Compact Statistics Cards -->
            <Grid Grid.Row="1" Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ships Card -->
                <Border Grid.Column="0" 
                        Background="White" 
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#1976D2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="🚢" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#1976D2"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalShips}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#1976D2"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Ships" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Border>

                <!-- Systems Card -->
                <Border Grid.Column="1" 
                        Background="White" 
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#4CAF50">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="⚙️" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#4CAF50"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalSystems}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#4CAF50"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Systems" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Border>

                <!-- Components Card -->
                <Border Grid.Column="2" 
                        Background="White" 
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#FF9800">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="🔧" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#FF9800"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding TotalComponents}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#FF9800"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Components" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Border>

                <!-- Alerts Card -->
                <Border Grid.Column="3" 
                        Background="White" 
                        Padding="16,12"
                        BorderThickness="0,0,0,3"
                        BorderBrush="#F44336">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="⚠️" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#F44336"/>
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding ActiveAlerts}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#F44336"
                                   Margin="0,4,0,0"/>
                        <TextBlock Grid.Row="2" 
                                   Text="Alerts" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Foreground="#757575"
                                   Margin="0,2,0,0"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Compact Content Panels -->
            <Grid Grid.Row="2" Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Activity -->
                <Border Grid.Column="0" 
                        Background="White" 
                        Padding="16,12"
                        Margin="0,0,8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Recent Activity" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,8"/>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      Height="200">
                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" 
                                                Padding="8,6" 
                                                Margin="0,0,0,4"
                                                CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Icon}" 
                                                           FontSize="14" 
                                                           VerticalAlignment="Center" 
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding Description}" 
                                                           FontSize="12" 
                                                           VerticalAlignment="Center" 
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding TimeAgo}" 
                                                           FontSize="11" 
                                                           Foreground="#757575" 
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- System Status -->
                <Border Grid.Column="1" 
                        Background="White" 
                        Padding="16,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="System Status" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,8"/>

                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto" 
                                      Height="200">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Database Connection" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <Ellipse Grid.Column="1" 
                                             Width="8" 
                                             Height="8" 
                                             Fill="#4CAF50"/>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="Active Systems" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="{Binding ActiveSystems}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,4,0"/>
                                        <TextBlock Text="/" 
                                                   FontSize="12" 
                                                   Foreground="#757575" 
                                                   Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding TotalSystems}" 
                                                   FontSize="12" 
                                                   Foreground="#757575"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" 
                                               Text="System Health" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Column="1" 
                                                 Value="{Binding SystemHealth}" 
                                                 Maximum="100" 
                                                 Height="12" 
                                                 Background="#E0E0E0" 
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding SystemHealth, StringFormat='{}{0}%'}" 
                                               FontSize="12" 
                                               FontWeight="SemiBold" 
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Compact Quick Actions -->
            <Border Grid.Row="3" 
                    Background="White" 
                    Padding="16,12"
                    Margin="16,8,16,16"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#E0E0E0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Quick Actions" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Add Ship" 
                                Command="{Binding AddShipCommand}"
                                Background="#1976D2"
                                Foreground="White"
                                BorderThickness="0"
                                Height="32"
                                Padding="12,0"
                                FontSize="12"
                                Margin="0,0,8,0"/>
                        <Button Content="Add System" 
                                Command="{Binding AddSystemCommand}"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Height="32"
                                Padding="12,0"
                                FontSize="12"
                                Margin="0,0,8,0"/>
                        <Button Content="Add Component" 
                                Command="{Binding AddComponentCommand}"
                                Background="#FF9800"
                                Foreground="White"
                                BorderThickness="0"
                                Height="32"
                                Padding="12,0"
                                FontSize="12"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="4" 
                    Background="#80000000" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                    CornerRadius="4">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                                 Width="80" 
                                 Height="12" 
                                 Margin="0,0,0,8"/>
                    <TextBlock Text="Loading dashboard..." 
                               Foreground="White" 
                               FontSize="10" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl> 