<UserControl x:Class="MaritimeERP.Desktop.Views.SecurityReviewStatementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FAFAFA">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Status color converter would go here in a real implementation -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="16,12"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Security Review Statements" 
                               FontSize="22" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="Manage security review statements and approval tracking"
                               FontSize="13"
                               Foreground="#757575"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="+ New Security Review Statement" 
                            Command="{Binding AddSecurityReviewStatementCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="36"
                            Padding="16,0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Margin="0,0,8,0"/>
                    <Button Content="🔄 Refresh" 
                            Command="{Binding RefreshCommand}"
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="36"
                            Padding="12,0"
                            FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Border Grid.Row="1" 
                Background="#F8F9FA" 
                Padding="16,12"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Statements -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Total Statements" 
                                   FontSize="12" 
                                   Foreground="#757575"/>
                        <TextBlock Text="{Binding TotalStatements}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#1976D2"/>
                    </StackPanel>
                </Border>

                <!-- Pending Review -->
                <Border Grid.Column="1" 
                        Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Pending Review" 
                                   FontSize="12" 
                                   Foreground="#757575"/>
                        <TextBlock Text="{Binding PendingReview}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#FF9800"/>
                    </StackPanel>
                </Border>

                <!-- Approved -->
                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Approved" 
                                   FontSize="12" 
                                   Foreground="#757575"/>
                        <TextBlock Text="{Binding Approved}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>

                <!-- My Statements -->
                <Border Grid.Column="3" 
                        Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="My Statements" 
                                   FontSize="12" 
                                   Foreground="#757575"/>
                        <TextBlock Text="{Binding MyStatements}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#9C27B0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <!-- Security Review Statements List -->
            <Border Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filters -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search -->
                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="13"
                                     Height="32"
                                     Padding="8,0"
                                     VerticalContentAlignment="Center"
                                     Background="White"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="🔍 Search statements..." 
                                                                           Foreground="#9E9E9E" 
                                                                           FontSize="13" 
                                                                           Margin="8,0"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Ship Filter -->
                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding Ships}"
                                      SelectedItem="{Binding FilterShip}"
                                      DisplayMemberPath="ShipName"
                                      FontSize="13"
                                      Height="32"
                                      Padding="8,0"
                                      Background="White"
                                      BorderBrush="#E0E0E0"
                                      BorderThickness="1"
                                      Margin="8,0,0,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ShipName}" FontSize="13"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Status Filter -->
                            <ComboBox Grid.Column="2" 
                                      SelectedItem="{Binding FilterStatus}"
                                      FontSize="13"
                                      Height="32"
                                      Padding="8,0"
                                      Background="White"
                                      BorderBrush="#E0E0E0"
                                      BorderThickness="1"
                                      Margin="8,0,0,0">
                                <ComboBoxItem Content="All"/>
                                <ComboBoxItem Content="Draft"/>
                                <ComboBoxItem Content="Under Review"/>
                                <ComboBoxItem Content="Approved"/>
                            </ComboBox>

                            <!-- Clear Filters -->
                            <Button Grid.Column="3" 
                                    Content="Clear Filters"
                                    Command="{Binding ClearFiltersCommand}"
                                    Background="#F5F5F5"
                                    Foreground="#757575"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0"
                                    Height="32"
                                    Padding="12,0"
                                    FontSize="13"
                                    Margin="8,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Security Review Statements DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding SecurityReviewStatements}"
                              SelectedItem="{Binding SelectedSecurityReviewStatement}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              Background="White"
                              BorderThickness="0"
                              RowHeight="32"
                              FontSize="12">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#424242"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Request No" 
                                                Binding="{Binding RequestNumber}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Ship"
                                                Binding="{Binding Ship.ShipName}"
                                                Width="140"
                                                MinWidth="120"/>
                            <DataGridTextColumn Header="Reviewer"
                                                Binding="{Binding ReviewerName}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Department"
                                                Binding="{Binding ReviewerDepartment}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTemplateColumn Header="Status" Width="100" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource StatusBadgeStyle}">
                                            <TextBlock FontSize="10" 
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsApproved}" Value="True">
                                                                <Setter Property="Text" Value="Approved"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsUnderReview}" Value="True">
                                                                <Setter Property="Text" Value="Under Review"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Text" Value="Draft"/>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Created"
                                                Binding="{Binding CreatedDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                Width="90"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="Review Date"
                                                Binding="{Binding ReviewDate, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                Width="90"
                                                MinWidth="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="120" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="👁️" 
                                                    Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="View Details"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Width="25"
                                                    Height="25"
                                                    Margin="2"/>
                                            <Button Content="✏️" 
                                                    Command="{Binding DataContext.EditSecurityReviewStatementCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Edit"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Width="25"
                                                    Height="25"
                                                    Margin="2"/>
                                            <Button Content="🗑️" 
                                                    Command="{Binding DataContext.DeleteSecurityReviewStatementCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Delete"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Width="25"
                                                    Height="25"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" 
                            Background="#F5F5F5" 
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding StatusMessage}"
                                       Foreground="#757575"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>

                            <ProgressBar Grid.Column="1" 
                                         IsIndeterminate="True" 
                                         Height="2"
                                         Margin="16,0"
                                         Background="Transparent"
                                         Foreground="#2196F3"
                                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Grid.Column="2" 
                                       Text="{Binding SecurityReviewStatements.Count, StringFormat='Total: {0} statements'}"
                                       Foreground="#757575"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 