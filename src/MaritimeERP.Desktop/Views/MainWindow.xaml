<Window x:Class="MaritimeERP.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:MaritimeERP.Desktop.ViewModels"
        xmlns:views="clr-namespace:MaritimeERP.Desktop.Views"
        xmlns:services="clr-namespace:MaritimeERP.Desktop.Services"
        Title="Maritime ERP System" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#FAFAFA">

    <Window.Resources>
        <!-- DataTemplates for Dashboard and Placeholder -->
        <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:SecurityReviewStatementViewModel}">
            <views:SecurityReviewStatementView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:UserManagementViewModel}">
            <views:UserManagementView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:AuditLogsViewModel}">
            <views:AuditLogsView />
        </DataTemplate>
        

        
        <DataTemplate DataType="{x:Type viewModels:PlaceholderViewModel}">
            <Border Background="White" Padding="40" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Icon}" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding Message}" FontSize="14" Foreground="#757575" HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="400"/>
                    <TextBlock Text="This module is under development" FontSize="12" Foreground="#FF9800" HorizontalAlignment="Center" Margin="0,16,0,0" FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- StringToBooleanConverter -->
        <services:StringToBooleanConverter x:Key="StringToBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Compact Top Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="#1976D2"
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Compact Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸš¢" FontSize="18" VerticalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Maritime ERP"
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Compact Page Title -->
                <TextBlock Grid.Column="1"
                           Text="{Binding PageTitle}"
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#E3F2FD"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Compact User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentUser.FullName}" 
                               FontWeight="Medium"
                               FontSize="13"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <Button Content="Logout" 
                            Command="{Binding LogoutCommand}"
                            Background="#0D47A1"
                            Foreground="White"
                            BorderThickness="0"
                            Height="26"
                            Padding="10,0"
                            FontSize="12"
                            Margin="12,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Compact Sidebar Navigation -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="White"
                BorderThickness="0,0,1,0"
                BorderBrush="#E0E0E0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="8">
                <StackPanel>
                    <TextBlock Text="NAVIGATION"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#757575"
                               Margin="12,0,0,6"/>
                    
                    <ListBox ItemsSource="{Binding NavigationItems}"
                             SelectedItem="{Binding SelectedNavigation}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                        Padding="12,8"
                                        Margin="4,1"
                                        CornerRadius="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" 
                                                   FontSize="15"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsVisible}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content Area with Less Padding -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="#FAFAFA"
                Padding="12">
            <ContentPresenter x:Name="MainContent" Content="{Binding CurrentViewModel}"/>
        </Border>

        <!-- Compact Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="12,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Ready"
                           FontSize="11"
                           Foreground="#757575"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding CurrentUser.LastLoginAt, StringFormat='Last login: {0:g}'}"
                           FontSize="11"
                           Foreground="#757575"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window> 