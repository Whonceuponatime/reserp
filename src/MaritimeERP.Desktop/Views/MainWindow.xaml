<Window x:Class="MaritimeERP.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:MaritimeERP.Desktop.ViewModels"
        xmlns:views="clr-namespace:MaritimeERP.Desktop.Views"
        Title="Maritime ERP System" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <!-- DataTemplates to map ViewModels to Views -->
        <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:ShipsViewModel}">
            <views:ShipsView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:SystemsViewModel}">
            <views:SystemsView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:ComponentsViewModel}">
            <views:ComponentsView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModels:PlaceholderViewModel}">
            <Border Background="White" Padding="40" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Icon}" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="{Binding Title}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding Message}" FontSize="14" Foreground="#757575" HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="400"/>
                    <TextBlock Text="This module is under development" FontSize="12" Foreground="#FF9800" HorizontalAlignment="Center" Margin="0,16,0,0" FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <!-- BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="#1976D2"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸš¢" FontSize="24" VerticalAlignment="Center" Foreground="White"/>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Maritime ERP System"
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="Enterprise Resource Planning"
                                   FontSize="12"
                                   Foreground="#E3F2FD"/>
                    </StackPanel>
                </StackPanel>

                <!-- Page Title -->
                <TextBlock Grid.Column="1"
                           Text="{Binding PageTitle}"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- User Info and Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
                        <TextBlock Text="ðŸ‘¤" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                        <StackPanel Margin="8,0">
                            <TextBlock Text="{Binding CurrentUser.FullName}" 
                                       FontWeight="Medium"
                                       FontSize="14"
                                       Foreground="White"/>
                            <TextBlock Text="{Binding CurrentUser.Role.Name}"
                                       FontSize="12" 
                                       Foreground="#E3F2FD"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Logout" 
                            Command="{Binding LogoutCommand}"
                            Background="#0D47A1"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            Margin="16,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Sidebar Navigation -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="White"
                BorderThickness="0,0,1,0"
                BorderBrush="#E0E0E0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="16">
                <StackPanel>
                    <TextBlock Text="NAVIGATION"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#757575"
                               Margin="16,0,0,8"/>
                    
                    <ListBox ItemsSource="{Binding NavigationItems}"
                             SelectedItem="{Binding SelectedNavigation}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent" 
                                        Padding="16,12"
                                        Margin="8,2"
                                        CornerRadius="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" 
                                                   FontSize="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsVisible}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="#FAFAFA"
                Padding="24">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
                Background="White"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="24,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Ready"
                           FontSize="12"
                           Foreground="#757575"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Â© 2024 Maritime Solutions"
                               FontSize="12"
                               Foreground="#757575"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" | Version 1.0.0"
                               FontSize="12"
                               Foreground="#757575"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 