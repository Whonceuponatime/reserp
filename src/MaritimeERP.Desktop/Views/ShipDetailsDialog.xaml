<Window x:Class="MaritimeERP.Desktop.Views.ShipDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ship Details" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="White">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ðŸš¢ Ship Details" 
                       FontSize="18" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="{Binding Ship.ShipName, StringFormat='Ship: {0}'}" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="{Binding Ship.IMONumber, StringFormat='IMO: {0}'}" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Ship details functionality will be implemented here." 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Margin="0,20,0,20"/>
            
            <Button Content="Close" 
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window> 