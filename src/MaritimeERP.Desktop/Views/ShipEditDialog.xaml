<Window x:Class="MaritimeERP.Desktop.Views.ShipEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FAFAFA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="Margin" Value="0,16,0,12"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}" 
                           FontSize="24" 
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="14" 
                           Foreground="#757575"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- Basic Information Section -->
                    <TextBlock Text="âš“ Basic Information" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Ship Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Ship Name *" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding ShipName, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- IMO Number -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="IMO Number *" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding ImoNumber, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"
                                     MaxLength="7"/>
                        </StackPanel>

                        <!-- Ship Type -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Ship Type" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding ShipTypes}"
                                      SelectedItem="{Binding ShipType}"
                                      IsEditable="True"
                                      Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Flag -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Flag" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Flags}"
                                      SelectedItem="{Binding Flag}"
                                      IsEditable="True"
                                      Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>

                                                  <!-- Shipyard of Registry -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,16">
                                                          <TextBlock Text="Shipyard of Registry" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding ShipyardOfRegistry}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Build Year -->
                        <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Build Year" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding BuildYear}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Active Status -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16">
                            <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                            <CheckBox Content="Active" 
                                      IsChecked="{Binding IsActive}"
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Classification Section -->
                    <TextBlock Text="ðŸ›¡ï¸ Classification" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Class -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Classification Society *" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Classes}"
                                      SelectedItem="{Binding Class}"
                                      IsEditable="True"
                                      Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Class Notation -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Class Notation" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding ClassNotations}"
                                      SelectedItem="{Binding ClassNotation}"
                                      IsEditable="True"
                                      Style="{StaticResource ComboBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Tonnage Information Section -->
                    <TextBlock Text="âš–ï¸ Tonnage Information" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Gross Tonnage -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Gross Tonnage (GT)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding GrossTonnage}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Net Tonnage -->
                        <StackPanel Grid.Column="2" Margin="0,0,0,16">
                            <TextBlock Text="Net Tonnage (NT)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding NetTonnage}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Deadweight Tonnage -->
                        <StackPanel Grid.Column="4" Margin="0,0,0,16">
                            <TextBlock Text="Deadweight Tonnage (DWT)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding DeadweightTonnage}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Ownership Section -->
                    <TextBlock Text="ðŸ¢ Ownership" Style="{StaticResource SectionHeaderStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Owner -->
                        <StackPanel Grid.Column="0" Margin="0,0,0,16">
                            <TextBlock Text="Owner/Operator" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding Owner}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="White" Padding="20" CornerRadius="8" Margin="0,16,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,16,0"/>
                    <TextBlock Text="Processing..." FontSize="14" Foreground="#757575" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="âŒ Cancel" 
                            Command="{Binding CancelCommand}"
                            Background="#757575"
                            Foreground="White"
                            BorderThickness="0"
                            Height="36"
                            Padding="20,0"
                            Margin="8,0"/>
                    <Button Content="{Binding SaveButtonText}" 
                            Command="{Binding SaveCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="36"
                            Padding="20,0"
                            Margin="8,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 