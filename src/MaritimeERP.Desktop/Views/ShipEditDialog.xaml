        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ship Editor" 
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    
    <Grid Margin="20">
        <StackPanel>
