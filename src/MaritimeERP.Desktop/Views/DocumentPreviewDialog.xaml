<Window x:Class="MaritimeERP.Desktop.Views.DocumentPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        Title="Document Preview" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding DocumentName}" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding DocumentDetails}" 
                               FontSize="12" 
                               Foreground="#BDC3C7"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="ðŸ’¾ Download" 
                            Command="{Binding DownloadCommand}"
                            Background="#27AE60" Foreground="White" 
                            BorderThickness="0" Padding="12,6" 
                            FontSize="12" FontWeight="SemiBold"
                            Height="32" Margin="0,0,8,0"/>
                    
                    <Button Content="âœ“ Approve" 
                            Command="{Binding ApproveCommand}"
                            Background="#3498DB" Foreground="White" 
                            BorderThickness="0" Padding="12,6" 
                            FontSize="12" FontWeight="SemiBold"
                            Height="32" Margin="0,0,8,0"
                            Visibility="{Binding CanApprove, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    
                    <Button Content="âœ— Reject" 
                            Command="{Binding RejectCommand}"
                            Background="#E74C3C" Foreground="White" 
                            BorderThickness="0" Padding="12,6" 
                            FontSize="12" FontWeight="SemiBold"
                            Height="32" Margin="0,0,8,0"
                            Visibility="{Binding CanReject, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Document Details Panel -->
                <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                        CornerRadius="8" Padding="20">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Document Info -->
                            <TextBlock Text="Document Information" FontSize="16" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,0,0,16"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Document Name:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DocumentName}" 
                                           Margin="0,0,0,8" TextWrapping="Wrap"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Category:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Category}" 
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ship:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ShipName}" 
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="File Type:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding FileType}" 
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="File Size:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding FileSize}" 
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Uploaded By:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding UploadedBy}" 
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Upload Date:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding UploadDate}" 
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Status:" 
                                           FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Status}" 
                                           Margin="0,0,0,8"/>
                            </Grid>
                            
                            <!-- Description -->
                            <TextBlock Text="Description" FontSize="14" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,20,0,8"
                                       Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                       Margin="0,0,0,16"
                                       Visibility="{Binding HasDescription, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <!-- Comments -->
                            <TextBlock Text="Comments" FontSize="14" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,20,0,8"
                                       Visibility="{Binding HasComments, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding Comments}" TextWrapping="Wrap" 
                                       Margin="0,0,0,16"
                                       Visibility="{Binding HasComments, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <!-- Document Preview -->
                            <TextBlock Text="Document Preview" FontSize="14" FontWeight="Bold" 
                                       Foreground="#2C3E50" Margin="0,20,0,8"/>
                            
                            <!-- Preview Content -->
                            <Border Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" 
                                    CornerRadius="4" Padding="16" MinHeight="200">
                                <Grid>
                                    <!-- Image Preview -->
                                    <Image Source="{Binding ImageSource}" 
                                           Stretch="Uniform" 
                                           MaxHeight="400"
                                           Visibility="{Binding IsImageFile, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Text Preview -->
                                    <TextBox Text="{Binding TextContent}" 
                                             IsReadOnly="True" 
                                             TextWrapping="Wrap" 
                                             VerticalScrollBarVisibility="Auto"
                                             FontFamily="Consolas" 
                                             FontSize="12"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Visibility="{Binding IsTextFile, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- PDF/Other Files Message -->
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Visibility="{Binding IsOtherFile, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="ðŸ“„" FontSize="48" HorizontalAlignment="Center" 
                                                   Foreground="#95A5A6" Margin="0,0,0,16"/>
                                        <TextBlock Text="{Binding FileType}" FontSize="16" FontWeight="Bold" 
                                                   HorizontalAlignment="Center" Foreground="#7F8C8D" Margin="0,0,0,8"/>
                                        <TextBlock Text="Preview not available for this file type." 
                                                   FontSize="12" HorizontalAlignment="Center" 
                                                   Foreground="#95A5A6" Margin="0,0,0,8"/>
                                        <TextBlock Text="Click Download to view the file." 
                                                   FontSize="12" HorizontalAlignment="Center" 
                                                   Foreground="#95A5A6"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" FontSize="12" 
                           Foreground="#7F8C8D"/>
                
                <Button Grid.Column="1" Content="Close" 
                        Command="{Binding CloseCommand}"
                        Background="#95A5A6" Foreground="White" 
                        BorderThickness="0" Padding="16,8" 
                        FontSize="12" FontWeight="SemiBold"
                        Height="32"/>
            </Grid>
        </Border>
    </Grid>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
</Window> 