<Window x:Class="MaritimeERP.Desktop.Views.HardwareChangeRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        Title="System Hardware Change Request Form" 
        Height="900" Width="1000"
        MinHeight="800" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="System Hardware Change Request Form" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="30,0">
                    <TextBlock Text="Created" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                    <CheckBox IsChecked="{Binding IsCreated, Mode=OneWay}" IsEnabled="False" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="30,0">
                    <TextBlock Text="Under Review" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                    <CheckBox IsChecked="{Binding IsUnderReview}" IsEnabled="False" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="30,0">
                    <TextBlock Text="Approved" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                    <CheckBox IsChecked="{Binding IsApproved}" IsEnabled="False" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Form Content with ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="10">
            <StackPanel Orientation="Vertical" Margin="10">
                
                <!-- Basic Information -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Request Number" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="1" Text="{Binding RequestNumber}" 
                                 Padding="15" BorderThickness="0" IsReadOnly="True" FontSize="13"/>
                        
                        <TextBlock Grid.Column="2" Text="Created Date" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <DatePicker Grid.Column="3" SelectedDate="{Binding CreatedDate}" 
                                   Padding="15" BorderThickness="0" FontSize="13"/>
                    </Grid>
                </Border>
                
                <!-- Ship Selection -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Target Ship" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <ComboBox ItemsSource="{Binding Ships}" 
                                  SelectedItem="{Binding SelectedShip}"
                                  DisplayMemberPath="ShipName"
                                  Padding="15" BorderThickness="0" FontSize="13" Margin="0"/>
                    </StackPanel>
                </Border>
                
                <!-- Requester Information -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Requester Information" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Department" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="1" Text="{Binding Department}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="2" Text="Position" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="3" Text="{Binding PositionTitle}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="4" Text="Full Name" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="5" Text="{Binding RequesterName}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Installation Details -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Installation Details" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Installed CBS" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="1" Text="{Binding InstalledCbs}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="2" Text="Installed Component" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="3" Text="{Binding InstalledComponent}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Reason -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Request Reason" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <TextBox Text="{Binding Reason}" 
                                 Padding="15" BorderThickness="0" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="80" FontSize="13"/>
                    </StackPanel>
                </Border>
                
                <!-- Hardware Before Change -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Current Hardware (Before Change)" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Manufacturer/Model" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="1" Text="{Binding BeforeHwManufacturerModel}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="2" Text="Hardware Name" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="3" Text="{Binding BeforeHwName}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="4" Text="OS Name / Version" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="5" Text="{Binding BeforeHwOs}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Hardware After Change -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="New Hardware (After Change)" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Manufacturer/Model" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="1" Text="{Binding AfterHwManufacturerModel}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="2" Text="Hardware Name" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="3" Text="{Binding AfterHwName}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="4" Text="OS Name / Version" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="5" Text="{Binding AfterHwOs}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Work Description -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Work Description" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <TextBox Text="{Binding WorkDescription}" 
                                 Padding="15" BorderThickness="0" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="80" FontSize="13"/>
                    </StackPanel>
                </Border>
                
                <!-- Security Review -->
                <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Security Review Comments" 
                                  Background="#34495E" 
                                  Foreground="White"
                                  Padding="15" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                        
                        <TextBox Text="{Binding SecurityReviewComment}" 
                                 Padding="15" BorderThickness="0" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="80" FontSize="13"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="20" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Save/Submit Buttons (for normal users and non-admin viewing) -->
                <Button Content="Save" 
                        Command="{Binding SaveCommand}"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowSaveSubmitButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <Button Content="Submit" 
                        Command="{Binding SubmitCommand}"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowSaveSubmitButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Admin Approve/Reject Buttons (for admin viewing submitted forms) -->
                <Button Content="✅ Approve" 
                        Command="{Binding ApproveCommand}"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowApproveRejectButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <Button Content="❌ Reject" 
                        Command="{Binding RejectCommand}"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowApproveRejectButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Cancel Button (always visible) -->
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 