<UserControl x:Class="MaritimeERP.Desktop.Views.ComponentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FAFAFA">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InverseVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditingVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Compact Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="16,10"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Components" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="Manage ship components and equipment"
                               FontSize="12"
                               Foreground="#757575"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="+ Add Component" 
                            Command="{Binding AddComponentCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="16,0"
                            FontSize="12"
                            Margin="0,0,8,0"/>
                    <Button Content="🗂️ Import" 
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            FontSize="12"
                            Margin="0,0,8,0"/>
                    <Button Content="📊 Export" 
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Split View -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Components List -->
            <Border Grid.Column="0" 
                    Background="White"
                    Padding="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            Padding="12,12"
                            Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Filter Labels -->
                            <Grid Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Search Components" 
                                          FontSize="11" FontWeight="SemiBold" 
                                          Foreground="#424242"/>
                                
                                <TextBlock Grid.Column="1" Text="Filter by Ship" 
                                          FontSize="11" FontWeight="SemiBold" 
                                          Foreground="#424242" Margin="8,0,0,0"/>
                                
                                <TextBlock Grid.Column="2" Text="Filter by System" 
                                          FontSize="11" FontWeight="SemiBold" 
                                          Foreground="#424242" Margin="8,0,0,0"/>
                            </Grid>

                            <!-- Filter Controls -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" 
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Height="28"
                                         Padding="8,0"
                                         FontSize="12"
                                         Background="White"
                                         BorderThickness="1"
                                         BorderBrush="#E0E0E0"
                                         materialDesign:HintAssist.Hint="Type to search..."/>
                                
                                <ComboBox Grid.Column="1" 
                                          ItemsSource="{Binding Ships}"
                                          SelectedItem="{Binding SelectedShip}"
                                          DisplayMemberPath="ShipName"
                                          Height="28"
                                          Padding="8,0"
                                          FontSize="12"
                                          Background="White"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0"
                                          Margin="8,0,0,0"
                                          materialDesign:HintAssist.Hint="Select ship to view systems"/>
                                
                                <ComboBox Grid.Column="2" 
                                          ItemsSource="{Binding Systems}"
                                          SelectedItem="{Binding SelectedSystem}"
                                          DisplayMemberPath="Name"
                                          Height="28"
                                          Padding="8,0"
                                          FontSize="12"
                                          Background="White"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0"
                                          Margin="8,0,0,0"
                                          materialDesign:HintAssist.Hint="Select system to filter"/>

                                <Button Grid.Column="3"
                                        Content="Clear Filters"
                                        Command="{Binding ClearFiltersCommand}"
                                        Height="28"
                                        Padding="12,0"
                                        FontSize="11"
                                        Background="#FF9800"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Margin="8,0,0,0"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F57C00"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#EF6C00"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Components DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding FilteredComponents}"
                              SelectedItem="{Binding SelectedComponent}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              Background="White"
                              BorderThickness="0"
                              RowHeight="26"
                              FontSize="12"
                              Margin="0,0,8,0"
                              MouseDoubleClick="DataGrid_MouseDoubleClick">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#424242"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Height" Value="32"/>
                                <Setter Property="Padding" Value="8,0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Component Name" 
                                                Binding="{Binding Name}"
                                                Width="140"
                                                MinWidth="120"/>
                            <DataGridTextColumn Header="Ship"
                                                Binding="{Binding System.Ship.ShipName}"
                                                Width="100"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="System"
                                                Binding="{Binding System.Name}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Maker/Model"
                                                Binding="{Binding MakerModel}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Location"
                                                Binding="{Binding InstalledLocation}"
                                                Width="100"
                                                MinWidth="80"/>
                            <DataGridTextColumn Header="USB"
                                                Binding="{Binding UsbPorts}"
                                                Width="50"
                                                MinWidth="40"/>
                            <DataGridTextColumn Header="LAN"
                                                Binding="{Binding LanPorts}"
                                                Width="50"
                                                MinWidth="40"/>
                            <DataGridTextColumn Header="Serial Ports"
                                              Width="100"
                                              Binding="{Binding UsbPorts}"
                                              IsReadOnly="True"/>
                            <DataGridTextColumn Header="Connected CBs" 
                                               Binding="{Binding ConnectedCbs}" 
                                               Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" 
                            Background="#F5F5F5" 
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding StatusMessage}"
                                       FontSize="11"
                                       Foreground="#757575"
                                       VerticalAlignment="Center"/>

                            <ProgressBar Grid.Column="1" 
                                         Width="80" 
                                         Height="12" 
                                         IsIndeterminate="True" 
                                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         Margin="0,0,8,0"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Total: " 
                                           FontSize="11"
                                           Foreground="#757575"/>
                                <TextBlock Text="{Binding TotalComponents}" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#1976D2"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Component Details Panel -->
            <Border Grid.Column="1" 
                    Background="White"
                    Margin="8,0,0,0"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" 
                               Text="Component Details"
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,16"/>

                    <!-- Form -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Form fields -->
                            <TextBlock Text="Component Name"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                         Padding="8,0"
                                         FontSize="12"
                                     Background="White"
                                         BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                          IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>

                            <TextBlock Text="Component Type"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding ComponentType, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                          Padding="8,0"
                                          FontSize="12"
                                     Background="White"
                                          BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                     IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>

                            <TextBlock Text="System"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Systems}"
                                          SelectedItem="{Binding SelectedSystem}"
                                          DisplayMemberPath="Name"
                                      Height="32"
                                          Padding="8,0"
                                          FontSize="12"
                                      Background="White"
                                          BorderThickness="1"
                                      BorderBrush="#E0E0E0"
                                         IsEnabled="{Binding IsEditing}"
                                      Margin="0,0,0,12"/>

                            <TextBlock Text="Manufacturer"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Manufacturer, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                         Padding="8,0"
                                         FontSize="12"
                                     Background="White"
                                         BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                         IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>

                            <TextBlock Text="Model"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                         Padding="8,0"
                                         FontSize="12"
                                     Background="White"
                                         BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                     IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>

                            <TextBlock Text="Location"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding InstalledLocation, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                     Padding="8,0"
                                                 FontSize="12"
                                     Background="White"
                                                 BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                     IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>

                            <!-- Additional fields -->
                            <TextBlock Text="USB Ports"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding UsbPorts, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                     Padding="8,0"
                                                 FontSize="12"
                                     Background="White"
                                                 BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                     IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>

                            <TextBlock Text="LAN Ports"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding LanPorts, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                     Padding="8,0"
                                                 FontSize="12"
                                     Background="White"
                                                 BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                         IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>

                            <TextBlock Text="Connected CBs"
                                       FontSize="11"
                                       Foreground="#757575"
                                       Margin="0,0,0,4"/>
                            <TextBox Text="{Binding ConnectedCbs, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                         Padding="8,0"
                                         FontSize="12"
                                     Background="White"
                                         BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                          IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,12"/>
                            </StackPanel>
                    </ScrollViewer>

                            <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,12,0,0">
                                <Button Content="Save Component" 
                                Command="{Binding SaveCommand}"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                Margin="0,0,0,6">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="#CCCCCC"/>
                                            <Setter Property="Opacity" Value="0.7"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                                <Button Content="Edit Component" 
                                Command="{Binding EditCommand}"
                                        Background="#1976D2"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                <Button Content="Delete Component" 
                                Command="{Binding DeleteCommand}"
                                        Background="#D32F2F"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                <Button Content="Cancel" 
                                Command="{Binding CancelCommand}"
                                        Background="#757575"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"/>
                            </StackPanel>
                        </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 