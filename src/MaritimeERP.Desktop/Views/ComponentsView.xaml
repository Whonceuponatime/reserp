<UserControl x:Class="MaritimeERP.Desktop.Views.ComponentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InverseVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditingVisibilityStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="24" CornerRadius="8" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="ðŸ”§ Components Management" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Manage ship system components and hardware" 
                           FontSize="14" 
                           Foreground="#757575"/>
            </StackPanel>
        </Border>

        <!-- Search and Filter Controls -->
        <Border Grid.Row="1" Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search -->
                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="Search Components" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Height="32"
                             Padding="8"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- Ship Filter -->
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="16,0,0,0">
                    <TextBlock Text="Filter by Ship" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Ships}"
                              SelectedValue="{Binding FilterShipId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="ShipName"
                              Height="32"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>
                </StackPanel>

                <!-- System Filter -->
                <StackPanel Grid.Column="2" Grid.Row="0" Margin="16,0,0,0">
                    <TextBlock Text="Filter by System" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Systems}"
                              SelectedValue="{Binding FilterSystemId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="DisplayName"
                              Height="32"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>
                </StackPanel>

                <!-- Maker/Model Filter -->
                <StackPanel Grid.Column="3" Grid.Row="0" Margin="16,0,0,0">
                    <TextBlock Text="Filter by Maker/Model" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding MakerModels}"
                              SelectedValue="{Binding FilterMakerModel}"
                              Height="32"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>
                </StackPanel>

                <!-- Location Filter -->
                <StackPanel Grid.Column="4" Grid.Row="0" Margin="16,0,0,0">
                    <TextBlock Text="Filter by Location" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Locations}"
                              SelectedValue="{Binding FilterLocation}"
                              Height="32"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>
                </StackPanel>

                <!-- Clear Filters Button -->
                <Button Grid.Column="6" Grid.Row="0"
                        Content="Clear Filters"
                        Command="{Binding ClearFiltersCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Width="100"
                        Margin="16,20,0,0"/>

                <!-- Remote Connection Filter -->
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,12,0,0">
                    <CheckBox Content="Show only components with remote connection"
                              IsChecked="{Binding ShowOnlyRemoteComponents}"
                              FontSize="12"
                              Foreground="#757575"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="2" Background="White" Padding="0" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Components List -->
                <Grid Grid.Column="0" Margin="0,0,8,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Components Header -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Components" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="âž• Add Component"
                                        Command="{Binding AddComponentCommand}"
                                        Style="{StaticResource ActionButtonStyle}"
                                        Margin="0,0,8,0"/>
                                <Button Content="ðŸ—‘ï¸ Delete"
                                        Command="{Binding DeleteComponentCommand}"
                                        Style="{StaticResource DangerButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Components DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Components}"
                              SelectedItem="{Binding SelectedComponent}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              VerticalGridLinesBrush="#E0E0E0"
                              HorizontalGridLinesBrush="#E0E0E0"
                              AlternatingRowBackground="#F9F9F9"
                              RowBackground="White"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Component Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="System" 
                                                Binding="{Binding System.DisplayName}" 
                                                Width="200"/>
                            <DataGridTextColumn Header="Ship" 
                                                Binding="{Binding System.Ship.ShipName}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Maker/Model" 
                                                Binding="{Binding MakerModel}" 
                                                Width="150"/>
                            <DataGridTextColumn Header="Location" 
                                                Binding="{Binding InstalledLocation}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Ports" 
                                                Binding="{Binding PortsInfo}" 
                                                Width="120"/>
                            <DataGridCheckBoxColumn Header="Remote" 
                                                    Binding="{Binding HasRemoteConnection}" 
                                                    Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <!-- Component Details Form -->
                <Border Grid.Column="1" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1,0,0,0" 
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Form Header -->
                        <Border Grid.Row="0" Background="#F5F5F5" Padding="12,8" Margin="-16,-16,-16,16">
                            <TextBlock Text="Component Details" FontWeight="SemiBold" FontSize="14"/>
                        </Border>

                        <!-- Form Fields -->
                        <ScrollViewer Grid.Row="1" Padding="0" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Ship Selection -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Ship" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding Ships}"
                                              SelectedItem="{Binding SelectedShip}"
                                              DisplayMemberPath="ShipName"
                                              IsEnabled="{Binding IsEditing}"
                                              Height="32"
                                              BorderBrush="#E0E0E0"
                                              BorderThickness="1"/>
                                </StackPanel>

                                <!-- System Selection -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="System" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding Systems}"
                                              SelectedItem="{Binding SelectedSystem}"
                                              DisplayMemberPath="DisplayName"
                                              IsEnabled="{Binding IsEditing}"
                                              Height="32"
                                              BorderBrush="#E0E0E0"
                                              BorderThickness="1"/>
                                </StackPanel>

                                <!-- Component Name -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Component Name" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding ComponentName}"
                                             IsEnabled="{Binding IsEditing}"
                                             Height="32"
                                             Padding="8"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"/>
                                </StackPanel>

                                <!-- Maker/Model -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Maker/Model" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding MakerModel}"
                                             IsEnabled="{Binding IsEditing}"
                                             Height="32"
                                             Padding="8"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"/>
                                </StackPanel>

                                <!-- Installed Location -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Installed Location" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding InstalledLocation}"
                                             IsEnabled="{Binding IsEditing}"
                                             Height="32"
                                             Padding="8"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"/>
                                </StackPanel>

                                <!-- Ports Section -->
                                <TextBlock Text="Ports" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="USB Ports" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding UsbPorts}"
                                                 IsEnabled="{Binding IsEditing}"
                                                 Height="32"
                                                 Padding="8"
                                                 BorderBrush="#E0E0E0"
                                                 BorderThickness="1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="4,0">
                                        <TextBlock Text="LAN Ports" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding LanPorts}"
                                                 IsEnabled="{Binding IsEditing}"
                                                 Height="32"
                                                 Padding="8"
                                                 BorderBrush="#E0E0E0"
                                                 BorderThickness="1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                        <TextBlock Text="Serial Ports" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding SerialPorts}"
                                                 IsEnabled="{Binding IsEditing}"
                                                 Height="32"
                                                 Padding="8"
                                                 BorderBrush="#E0E0E0"
                                                 BorderThickness="1"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Connected CBs -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Connected CBs" FontSize="12" Foreground="#757575" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding ConnectedCbs}"
                                             IsEnabled="{Binding IsEditing}"
                                             Height="60"
                                             Padding="8"
                                             BorderBrush="#E0E0E0"
                                             BorderThickness="1"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>

                                <!-- Remote Connection -->
                                <StackPanel Margin="0,0,0,16">
                                    <CheckBox Content="Has Remote Connection"
                                              IsChecked="{Binding HasRemoteConnection}"
                                              IsEnabled="{Binding IsEditing}"
                                              FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Form Actions -->
                        <Border Grid.Row="2" Background="#F5F5F5" Padding="12,8" Margin="-16,16,-16,-16">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding EditComponentCommand}"
                                        Content="ðŸ“ Edit"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        Padding="12,0"
                                        Margin="4,0"
                                        Style="{StaticResource InverseVisibilityStyle}"/>
                                <Button Command="{Binding SaveComponentCommand}"
                                        Content="ðŸ’¾ Save"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        Padding="12,0"
                                        Margin="4,0"
                                        Style="{StaticResource EditingVisibilityStyle}"/>
                                <Button Command="{Binding CancelEditCommand}"
                                        Content="âŒ Cancel"
                                        Background="#FF9800"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        Padding="12,0"
                                        Margin="4,0"
                                        Style="{StaticResource EditingVisibilityStyle}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F5F5F5" Padding="16,8" CornerRadius="4" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="12" 
                           Foreground="#757575" 
                           VerticalAlignment="Center"/>
                
                <ProgressBar Grid.Column="1" 
                             Width="100" 
                             Height="16" 
                             IsIndeterminate="True" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl> 