<UserControl x:Class="MaritimeERP.Desktop.Views.ChangeRequestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#FAFAFA">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Status color converter would go here in a real implementation -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="16,12"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Change Management" 
                               FontSize="22" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="Manage change requests, approvals, and implementation tracking"
                               FontSize="13"
                               Foreground="#757575"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="+ New Change Request" 
                            Command="{Binding AddChangeRequestCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="36"
                            Padding="16,0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ“Š Reports" 
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="36"
                            Padding="12,0"
                            FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Border Grid.Row="1" 
                Background="#F8F9FA" 
                Padding="16,12"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Requests -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Total Requests" 
                                   FontSize="12" 
                                   Foreground="#757575"/>
                        <TextBlock Text="{Binding TotalRequests}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#1976D2"/>
                    </StackPanel>
                </Border>

                <!-- Pending Approvals -->
                <Border Grid.Column="1" 
                        Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Pending Approvals" 
                                   FontSize="12" 
                                   Foreground="#757575"/>
                        <TextBlock Text="{Binding PendingApprovals}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#FF9800"/>
                    </StackPanel>
                </Border>

                <!-- My Requests -->
                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="8"
                        Padding="16,12"
                        Margin="0,0,8,0"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="My Requests" 
                                   FontSize="12" 
                                   Foreground="#757575"/>
                        <TextBlock Text="{Binding MyRequests}" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Column="3" 
                        Background="White"
                        CornerRadius="8"
                        Padding="12"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                   FontSize="12" 
                                   Foreground="#757575"
                                   Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Submit" 
                                    Command="{Binding SubmitForApprovalCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="8,0"
                                    FontSize="11"
                                    Margin="0,0,4,0"/>
                            <Button Content="Approve" 
                                    Command="{Binding ApproveCommand}"
                                    Background="#2196F3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="8,0"
                                    FontSize="11"
                                    Margin="0,0,4,0"/>
                            <Button Content="Reject" 
                                    Command="{Binding RejectCommand}"
                                    Background="#F44336"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="24"
                                    Padding="8,0"
                                    FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Change Requests List -->
            <Border Grid.Column="0" 
                    Background="White"
                    Margin="0,0,4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filters -->
                    <Border Grid.Row="0" 
                            Background="#F5F5F5" 
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                     Height="28"
                                     Padding="8,0"
                                     FontSize="12"
                                     Background="White"
                                     BorderThickness="1"
                                     BorderBrush="#E0E0E0"
                                     VerticalContentAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Search requests..." Foreground="Gray" Margin="8,0,0,0"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <ComboBox Grid.Column="1" 
                                      ItemsSource="{Binding Ships}"
                                      SelectedItem="{Binding FilterShip}"
                                      DisplayMemberPath="ShipName"
                                      Height="28"
                                      Padding="8,0"
                                      FontSize="12"
                                      Background="White"
                                      BorderThickness="1"
                                      BorderBrush="#E0E0E0"
                                      Margin="8,0,0,0">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Style.Triggers>
                                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                                <Setter Property="Text" Value="All Ships"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>

                            <ComboBox Grid.Column="2" 
                                      ItemsSource="{Binding ChangeStatuses}"
                                      SelectedItem="{Binding FilterStatus}"
                                      DisplayMemberPath="Name"
                                      Height="28"
                                      Padding="8,0"
                                      FontSize="12"
                                      Background="White"
                                      BorderThickness="1"
                                      BorderBrush="#E0E0E0"
                                      Margin="8,0,0,0">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Style.Triggers>
                                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                                <Setter Property="Text" Value="All Statuses"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>

                            <Button Grid.Column="3"
                                    Content="Clear"
                                    Command="{Binding ClearFiltersCommand}"
                                    Background="#757575"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="28"
                                    Padding="12,0"
                                    FontSize="11"
                                    Margin="8,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Change Requests DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ChangeRequests}"
                              SelectedItem="{Binding SelectedChangeRequest}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              Background="White"
                              BorderThickness="0"
                              RowHeight="32"
                              FontSize="12">
                        
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#424242"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="Padding" Value="12,0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Request No" 
                                                Binding="{Binding RequestNo}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Ship"
                                                Binding="{Binding ShipDisplay}"
                                                Width="140"
                                                MinWidth="120"/>
                            <DataGridTextColumn Header="Type"
                                                Binding="{Binding TypeDisplay}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTemplateColumn Header="Status" Width="100" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource StatusBadgeStyle}">
                                            <TextBlock Text="{Binding StatusDisplay}" 
                                                       FontSize="10" 
                                                       FontWeight="SemiBold"
                                                       TextAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Purpose"
                                                Binding="{Binding Purpose}"
                                                Width="*"
                                                MinWidth="150"/>
                            <DataGridTextColumn Header="Requested By"
                                                Binding="{Binding RequestedBy.FullName}"
                                                Width="120"
                                                MinWidth="100"/>
                            <DataGridTextColumn Header="Created"
                                                Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                Width="90"
                                                MinWidth="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" 
                            Background="#F5F5F5" 
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding StatusMessage}"
                                       Foreground="#757575"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>

                            <ProgressBar Grid.Column="1" 
                                         IsIndeterminate="True" 
                                         Height="2"
                                         Margin="16,0"
                                         Background="Transparent"
                                         Foreground="#2196F3"
                                         Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <TextBlock Grid.Column="2" 
                                       Text="{Binding ChangeRequests.Count, StringFormat='Total: {0} requests'}"
                                       Foreground="#757575"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Change Request Details Panel -->
            <Border Grid.Column="1" 
                    Background="White"
                    BorderThickness="1,0,0,0"
                    BorderBrush="#E0E0E0"
                    Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Change Request Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,16"/>

                        <!-- Form -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Request Number -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                <TextBlock Text="Request Number" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding RequestNo, UpdateSourceTrigger=PropertyChanged}"
                                         Height="28"
                                         Padding="8,0"
                                         FontSize="12"
                                         IsEnabled="{Binding IsEditing}"
                                         VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Ship -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                <TextBlock Text="Ship" FontSize="12" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding Ships}"
                                          SelectedItem="{Binding SelectedShip}"
                                          DisplayMemberPath="ShipName"
                                          Height="28"
                                          Padding="8,0"
                                          FontSize="12"
                                          IsEnabled="{Binding IsEditing}"
                                          VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Change Type -->
                            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                                <TextBlock Text="Change Type" FontSize="12" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding ChangeTypes}"
                                          SelectedItem="{Binding SelectedChangeType}"
                                          DisplayMemberPath="Name"
                                          Height="28"
                                          Padding="8,0"
                                          FontSize="12"
                                          IsEnabled="{Binding IsEditing}"
                                          VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Status -->
                            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                                <TextBlock Text="Status" FontSize="12" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding ChangeStatuses}"
                                          SelectedItem="{Binding SelectedStatus}"
                                          DisplayMemberPath="Name"
                                          Height="28"
                                          Padding="8,0"
                                          FontSize="12"
                                          IsEnabled="False"
                                          VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Purpose -->
                            <StackPanel Grid.Row="4" Margin="0,0,0,12">
                                <TextBlock Text="Purpose *" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Purpose, UpdateSourceTrigger=PropertyChanged}"
                                         Height="28"
                                         Padding="8,0"
                                         FontSize="12"
                                         IsEnabled="{Binding IsEditing}"
                                         VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Description -->
                            <StackPanel Grid.Row="5" Margin="0,0,0,12">
                                <TextBlock Text="Description" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                         Height="80"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="8"
                                         FontSize="12"
                                         IsEnabled="{Binding IsEditing}"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="7" Orientation="Vertical" Margin="0,16,0,0">
                                
                                <!-- Edit/Save/Cancel -->
                                <Button Content="Save" 
                                        Command="{Binding SaveChangeRequestCommand}"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"
                                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                
                                <Button Content="Edit" 
                                        Command="{Binding EditChangeRequestCommand}"
                                        Background="#1976D2"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                
                                <Button Content="Delete" 
                                        Command="{Binding DeleteChangeRequestCommand}"
                                        Background="#D32F2F"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                
                                <Button Content="Cancel" 
                                        Command="{Binding CancelEditCommand}"
                                        Background="#757575"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,12"
                                        Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <!-- Workflow Actions -->
                                <Separator Margin="0,8"/>
                                
                                <Button Content="Submit for Approval" 
                                        Command="{Binding SubmitForApprovalCommand}"
                                        Background="#FF9800"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                
                                <Button Content="Approve" 
                                        Command="{Binding ApproveCommand}"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                
                                <Button Content="Reject" 
                                        Command="{Binding RejectCommand}"
                                        Background="#F44336"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>
                                
                                <Button Content="Mark as Implemented" 
                                        Command="{Binding ImplementCommand}"
                                        Background="#9C27B0"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"
                                        Margin="0,0,0,6"/>

                                <Separator Margin="0,8"/>
                                
                                <Button Content="View Details" 
                                        Command="{Binding ViewDetailsCommand}"
                                        Background="#607D8B"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="32"
                                        FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl> 