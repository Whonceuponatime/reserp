<UserControl x:Class="MaritimeERP.Desktop.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Status Color Converter -->
        <Style x:Key="BoolToStatusColorConverter" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsApproved}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsApproved}" Value="False">
                    <Setter Property="Background" Value="#FF9800"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <Style x:Key="SmallActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <Style x:Key="DataGridTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <!-- Main Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Ship Filter -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="15,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Ship Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Ship Filter:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Ships}" 
                              SelectedItem="{Binding SelectedShip}"
                              DisplayMemberPath="ShipName"
                              Width="200"
                              Height="30">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ShipName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Content="All Ships" 
                            Command="{Binding ClearShipFilterCommand}" 
                            Margin="10,0,0,0" 
                            Height="30"
                            Padding="10,0"
                            Background="#E0E0E0"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Upload Document" 
                            Command="{Binding UploadDocumentCommand}"
                            Background="#4CAF50" 
                            Foreground="White" 
                            Height="30"
                            Padding="15,0"
                            Margin="0,0,10,0"/>
                    <Button Content="Refresh" 
                            Command="{Binding LoadDocumentsCommand}"
                            Background="#2196F3" 
                            Foreground="White" 
                            Height="30"
                            Padding="15,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards - Compact -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Documents -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Background="#2196F3" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="DOC" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalDocuments}" FontSize="20" FontWeight="Bold" 
                              HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Total Documents" FontSize="10" HorizontalAlignment="Center" 
                              Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Approved Documents -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Background="#4CAF50" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="OK" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding ApprovedDocuments}" FontSize="20" FontWeight="Bold" 
                              HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Approved" FontSize="10" HorizontalAlignment="Center" 
                              Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Pending Documents -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Background="#FF9800" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="..." FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding PendingDocuments}" FontSize="20" FontWeight="Bold" 
                              HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Pending" FontSize="10" HorizontalAlignment="Center" 
                              Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>

            <!-- Total File Size -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Background="#9C27B0">
                <StackPanel>
                    <TextBlock Text="SIZE" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalFileSize}" FontSize="20" FontWeight="Bold" 
                              HorizontalAlignment="Center" Foreground="White"/>
                    <TextBlock Text="Total Size" FontSize="10" HorizontalAlignment="Center" 
                              Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Documents List -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Documents Header with Filters -->
            <Border Grid.Row="0" Background="#FAFAFA" Padding="10,8" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search and Category Filter -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="200" Height="25" Margin="0,0,15,0"/>
                        
                        <TextBlock Text="Category:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding DocumentCategories}" 
                                  SelectedItem="{Binding SelectedCategory}"
                                  DisplayMemberPath="Name"
                                  Width="180" Height="25" Margin="0,0,15,0"/>
                        
                        <Button Content="Clear" Command="{Binding ClearFiltersCommand}" 
                                Height="25" Padding="10,0" Background="#E0E0E0"/>
                    </StackPanel>

                    <!-- Document Count -->
                    <TextBlock Grid.Column="1" Text="{Binding FilteredDocuments.Count, StringFormat='({0} documents)'}" 
                              FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Documents DataGrid -->
            <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredDocuments}" 
                      SelectedItem="{Binding SelectedDocument}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F9F9F9"
                      RowHeight="35">

                <DataGrid.Columns>
                    <!-- Document Name -->
                    <DataGridTextColumn Header="Document Name" 
                                       Binding="{Binding Name}" 
                                       Width="200"
                                       ElementStyle="{StaticResource DataGridTextStyle}"/>

                    <!-- Category -->
                    <DataGridTextColumn Header="Category" 
                                       Binding="{Binding Category.Name}" 
                                       Width="120"
                                       ElementStyle="{StaticResource DataGridTextStyle}"/>

                    <!-- Ship -->
                    <DataGridTextColumn Header="Ship" 
                                       Binding="{Binding Ship.ShipName}" 
                                       Width="120"
                                       ElementStyle="{StaticResource DataGridTextStyle}"/>

                    <!-- Status -->
                    <DataGridTemplateColumn Header="Status" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" Padding="6,3">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsApproved}" Value="True">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsApproved}" Value="False">
                                                    <Setter Property="Background" Value="#FF9800"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding StatusDisplay}" 
                                              FontSize="10" FontWeight="Bold"
                                              HorizontalAlignment="Center" 
                                              Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- File Size -->
                    <DataGridTextColumn Header="Size" 
                                       Binding="{Binding FileSizeDisplay}" 
                                       Width="60"
                                       ElementStyle="{StaticResource DataGridTextStyle}"/>

                    <!-- Upload Date -->
                    <DataGridTextColumn Header="Uploaded" 
                                       Binding="{Binding UploadedAtDisplay}" 
                                       Width="100"
                                       ElementStyle="{StaticResource DataGridTextStyle}"/>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    
                                    <!-- Preview Button -->
                                    <Button Content="View" 
                                            Command="{Binding DataContext.PreviewDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Background="#2196F3" Foreground="White" 
                                            Margin="2,0"/>

                                    <!-- Download Button -->
                                    <Button Content="Save" 
                                            Command="{Binding DataContext.DownloadDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Background="#4CAF50" Foreground="White" 
                                            Margin="2,0"/>

                                    <!-- Approve Button (Admin Only) -->
                                    <Button Content="OK" 
                                            Command="{Binding DataContext.ApproveDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Background="#8BC34A" Foreground="White" 
                                            Margin="2,0"
                                            Visibility="{Binding DataContext.CanApprove, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <!-- Reject Button (Admin Only) -->
                                    <Button Content="X" 
                                            Command="{Binding DataContext.RejectDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Background="#F44336" Foreground="White" 
                                            Margin="2,0"
                                            Visibility="{Binding DataContext.CanReject, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <!-- Delete Button (Admin Only) -->
                                    <Button Content="Del" 
                                            Command="{Binding DataContext.DeleteDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SmallActionButtonStyle}"
                                            Background="#9E9E9E" Foreground="White" 
                                            Margin="2,0"
                                            Visibility="{Binding DataContext.CanDelete, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,0,0,10"/>
                <TextBlock Text="Loading documents..." Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl> 