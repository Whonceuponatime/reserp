<UserControl x:Class="MaritimeERP.Desktop.Views.DocumentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Status Color Converter -->
        <Style x:Key="BoolToStatusColorConverter" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsApproved}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsApproved}" Value="False">
                    <Setter Property="Background" Value="#FF9800"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Compact Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Document Management" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Manage vessel documentation and approved supplier documents" 
                              FontSize="12" Foreground="White" Opacity="0.9"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Ship:" FontSize="14" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding Ships}"
                              SelectedItem="{Binding SelectedShip}"
                              DisplayMemberPath="ShipName"
                              MinWidth="200" Height="30" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Compact Statistics -->
        <Border Grid.Row="1" Background="#F8F9FA" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Stats Summary -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Total: " FontSize="12" FontWeight="SemiBold" Foreground="#666"/>
                    <TextBlock Text="{Binding TotalDocuments}" FontSize="12" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,15,0"/>
                    <TextBlock Text="Approved: " FontSize="12" FontWeight="SemiBold" Foreground="#666"/>
                    <TextBlock Text="{Binding ApprovedDocuments}" FontSize="12" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,15,0"/>
                    <TextBlock Text="Pending: " FontSize="12" FontWeight="SemiBold" Foreground="#666"/>
                    <TextBlock Text="{Binding PendingDocuments}" FontSize="12" FontWeight="Bold" Foreground="#FF9800" Margin="0,0,15,0"/>
                    <TextBlock Text="Storage: " FontSize="12" FontWeight="SemiBold" Foreground="#666"/>
                    <TextBlock Text="{Binding TotalFileSize}" FontSize="12" FontWeight="Bold" Foreground="#9C27B0"/>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Upload Document" 
                            Command="{Binding UploadDocumentCommand}"
                            Background="#4CAF50" Foreground="White" 
                            Padding="12,6" Margin="0,0,10,0" Height="30"
                            Visibility="{Binding CanUpload, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button Content="Refresh" 
                            Command="{Binding LoadDocumentsCommand}"
                            Background="#607D8B" Foreground="White" 
                            Padding="12,6" Height="30"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Compact Filters Panel -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                    CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Filters" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <!-- Search -->
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" Height="30" Margin="0,0,0,10"
                             ToolTip="Search documents..."
                             BorderBrush="#CCCCCC"/>

                    <!-- Category Filter -->
                    <Label Content="Category" FontSize="12" FontWeight="SemiBold" Padding="0,5,0,2"/>
                    <ComboBox ItemsSource="{Binding DocumentCategories}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name"
                              Height="30" Margin="0,0,0,10"/>

                    <!-- Status Filters -->
                    <Label Content="Status" FontSize="12" FontWeight="SemiBold" Padding="0,5,0,2"/>
                    <CheckBox Content="Approved Only" 
                              IsChecked="{Binding ShowApprovedOnly}" 
                              Margin="0,2,0,2" FontSize="12"/>
                    <CheckBox Content="Pending Only" 
                              IsChecked="{Binding ShowPendingOnly}" 
                              Margin="0,2,0,10" FontSize="12"/>

                    <!-- Clear Filters -->
                    <Button Content="Clear Filters" 
                            Command="{Binding ClearFiltersCommand}"
                            Background="#757575" Foreground="White"
                            Padding="10,5" Height="30"/>
                </StackPanel>
            </Border>

            <!-- Documents List -->
            <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                    CornerRadius="8" Padding="15" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <!-- Documents Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Documents" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="{Binding FilteredDocuments.Count, StringFormat='({0} documents)'}" 
                                  FontSize="12" Foreground="#666"/>
                    </Grid>

                    <!-- Documents DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredDocuments}" 
                              SelectedItem="{Binding SelectedDocument}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              AlternatingRowBackground="#F8F9FA"
                              RowHeight="40"
                              FontSize="12">
                        
                        <DataGrid.Columns>
                            <!-- Document Name -->
                            <DataGridTextColumn Header="Document Name" Binding="{Binding Name}" Width="*" MinWidth="200">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Name}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Category -->
                            <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="120" MinWidth="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Category.Name}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Ship -->
                            <DataGridTextColumn Header="Ship" Binding="{Binding Ship.ShipName}" Width="100" MinWidth="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Ship.ShipName}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Header="Status" Width="90" MinWidth="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="8,4" Margin="4,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsApproved}" Value="True">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsApproved}" Value="False">
                                                            <Setter Property="Background" Value="#FF9800"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding StatusDisplay}" 
                                                      Foreground="White" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="11"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Actions -->
                            <DataGridTemplateColumn Header="Actions" Width="180" MinWidth="160">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- Preview Button -->
                                            <Button Content="View" 
                                                    Command="{Binding DataContext.PreviewDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Preview Document"
                                                    Width="35" Height="26" Margin="2" FontSize="10"
                                                    Background="#2196F3" Foreground="White" BorderThickness="0"/>

                                            <!-- Download Button -->
                                            <Button Content="Save" 
                                                    Command="{Binding DataContext.DownloadDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Download Document"
                                                    Width="35" Height="26" Margin="2" FontSize="10"
                                                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                                                    Visibility="{Binding DataContext.CanDelete, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                            <!-- Approve Button (Admin Only) -->
                                            <Button Content="OK" 
                                                    Command="{Binding DataContext.ApproveDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Approve Document"
                                                    Width="30" Height="26" Margin="2" FontSize="10"
                                                    Background="#4CAF50" Foreground="White" BorderThickness="0"
                                                    Visibility="{Binding DataContext.CanApprove, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                            <!-- Reject Button (Admin Only) -->
                                            <Button Content="X" 
                                                    Command="{Binding DataContext.RejectDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Reject Document"
                                                    Width="30" Height="26" Margin="2" FontSize="10"
                                                    Background="#F44336" Foreground="White" BorderThickness="0"
                                                    Visibility="{Binding DataContext.CanReject, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Details Panel Separator -->
                    <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                                  Background="#E0E0E0" ResizeBehavior="PreviousAndNext" 
                                  ResizeDirection="Rows" Margin="0,5"/>

                    <!-- Document Details Panel -->
                    <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" 
                            CornerRadius="5" Padding="15" Margin="0,5,0,0"
                            Visibility="{Binding SelectedDocument, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Details Header -->
                            <TextBlock Grid.Row="0" Text="Document Details" FontSize="14" FontWeight="SemiBold" 
                                      Margin="0,0,0,10" Foreground="#333"/>
                            
                            <!-- Details Content -->
                            <Grid Grid.Row="1" DataContext="{Binding SelectedDocument}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Document Name -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Document Name:" FontWeight="SemiBold" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" 
                                          Margin="0,0,0,5" FontSize="12" TextWrapping="Wrap"/>
                                
                                <!-- Category -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Category:" FontWeight="SemiBold" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Category.Name}" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                
                                <!-- Ship -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ship:" FontWeight="SemiBold" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Ship.ShipName}" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                
                                <!-- File Size -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="File Size:" FontWeight="SemiBold" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding FileSizeDisplay}" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                
                                <!-- Upload Date -->
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Uploaded:" FontWeight="SemiBold" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding UploadedAtDisplay}" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                
                                <!-- Uploader -->
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Uploader:" FontWeight="SemiBold" 
                                          Margin="0,0,0,5" FontSize="12"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding UploaderDisplay}" 
                                          Margin="0,0,0,5" FontSize="12"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Compact Status Bar -->
        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center" Foreground="#666" FontSize="12"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ProgressBar Width="15" Height="15" IsIndeterminate="True" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,0,5,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl> 