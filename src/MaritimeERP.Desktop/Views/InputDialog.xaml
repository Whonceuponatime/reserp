<Window x:Class="MaritimeERP.Desktop.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Required" 
        Height="200" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" x:Name="PromptTextBlock" 
                   FontWeight="SemiBold" 
                   TextWrapping="Wrap" 
                   Margin="0,0,0,15"/>
        
        <TextBox Grid.Row="1" x:Name="InputTextBox" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Padding="8"
                 BorderThickness="1"
                 BorderBrush="#CCCCCC"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="OK_Click"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="Cancel_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window> 