<UserControl x:Class="MaritimeERP.Desktop.Views.ShipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Compact Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="16,10"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Ships" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text="Manage fleet ships and vessels"
                               FontSize="12"
                               Foreground="#757575"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="+ Add Ship" 
                            Command="{Binding AddShipCommand}"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="16,0"
                            FontSize="12"
                            Margin="0,0,8,0"
                            Visibility="{Binding CanEditData, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="ðŸ—‚ï¸ Import" 
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            FontSize="12"
                            Margin="0,0,8,0"
                            Visibility="{Binding CanEditData, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="ðŸ“Š Export" 
                            Background="#424242"
                            Foreground="White"
                            BorderThickness="0"
                            Height="32"
                            Padding="12,0"
                            FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search and Filter -->
        <Border Grid.Row="1" 
                Background="#F5F5F5" 
                Padding="12,12"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Filter Labels -->
                <Grid Grid.Row="0" Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Search Ships" 
                              FontSize="11" FontWeight="SemiBold" 
                              Foreground="#424242"/>
                    
                    <TextBlock Grid.Column="1" Text="Filter by Type" 
                              FontSize="11" FontWeight="SemiBold" 
                              Foreground="#424242" Margin="8,0,0,0"/>
                    
                    <TextBlock Grid.Column="2" Text="Filter by Flag" 
                              FontSize="11" FontWeight="SemiBold" 
                              Foreground="#424242" Margin="8,0,0,0"/>
                    
                    <TextBlock Grid.Column="4" Text="Show Active Only" 
                              FontSize="11" FontWeight="SemiBold" 
                              Foreground="#424242"/>
                </Grid>

                <!-- Filter Controls -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Height="28"
                             Padding="8,0"
                             FontSize="12"
                             Background="White"
                             BorderThickness="1"
                             BorderBrush="#E0E0E0"
                             ToolTip="Type to search ships..."/>
                    
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding ShipTypes}"
                              SelectedItem="{Binding SelectedShipType}"
                              Height="28"
                              Padding="8,0"
                              FontSize="12"
                              Background="White"
                              BorderThickness="1"
                              BorderBrush="#E0E0E0"
                              Margin="8,0,0,0"
                              ToolTip="Select ship type to filter"/>
                    
                    <ComboBox Grid.Column="2" 
                              ItemsSource="{Binding Flags}"
                              SelectedItem="{Binding SelectedFlag}"
                              Height="28"
                              Padding="8,0"
                              FontSize="12"
                              Background="White"
                              BorderThickness="1"
                              BorderBrush="#E0E0E0"
                              Margin="8,0,0,0"
                              ToolTip="Select flag to filter"/>

                    <Button Grid.Column="3"
                            Content="Clear Filters"
                            Command="{Binding ClearFiltersCommand}"
                            Height="28"
                            Padding="12,0"
                            FontSize="11"
                            Background="#FF9800"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="8,0,0,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#EF6C00"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                        <CheckBox IsChecked="{Binding ShowActiveOnly}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Ships DataGrid -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredShips}"
                  SelectedItem="{Binding SelectedShip}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Background="White"
                  BorderThickness="0"
                  RowHeight="26"
                  FontSize="12">
            
            <!-- Context Menu for Right-Click Actions -->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="ðŸ‘ï¸ View Details" 
                              Command="{Binding ViewDetailsCommand}"
                              IsEnabled="{Binding HasSelectedShip}"/>
                    <Separator Visibility="{Binding CanEditData, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <MenuItem Header="âœï¸ Edit Ship" 
                              Command="{Binding EditShipCommand}"
                              Visibility="{Binding CanEditData, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <MenuItem Header="ðŸ—‘ï¸ Delete Ship" 
                              Command="{Binding DeleteShipCommand}"
                              Visibility="{Binding CanEditData, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="Foreground" Value="#424242"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="Height" Value="32"/>
                    <Setter Property="Padding" Value="8,0"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F8F9FA"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ship Name" 
                                    Binding="{Binding ShipName}"
                                    Width="150"
                                    MinWidth="120"/>
                <DataGridTextColumn Header="IMO Number"
                                    Binding="{Binding ImoNumber}"
                                    Width="120"
                                    MinWidth="100"/>
                <DataGridTextColumn Header="Ship Type"
                                    Binding="{Binding ShipType}"
                                    Width="100"
                                    MinWidth="80"/>
                <DataGridTextColumn Header="Flag"
                                    Binding="{Binding Flag}"
                                    Width="100"
                                    MinWidth="80"/>
                <DataGridTextColumn Header="Shipyard of Registry"
                                    Binding="{Binding ShipyardOfRegistry}"
                                    Width="120"
                                    MinWidth="100"/>
                <DataGridTextColumn Header="Built Year"
                                    Binding="{Binding BuildYear}"
                                    Width="80"
                                    MinWidth="70"/>
                <DataGridTextColumn Header="Owner"
                                    Binding="{Binding Owner}"
                                    Width="120"
                                    MinWidth="100"/>
                <DataGridTextColumn Header="Tonnage"
                                    Binding="{Binding GrossTonnage}"
                                    Width="80"
                                    MinWidth="70"/>
                <DataGridCheckBoxColumn Header="Active"
                                        Binding="{Binding IsActive}"
                                        Width="60"
                                        MinWidth="50"/>
                <DataGridTextColumn Header="Last Updated"
                                    Binding="{Binding UpdatedAt, StringFormat='{}{0:MM/dd/yyyy}'}"
                                    Width="100"
                                    MinWidth="90"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons and Status Bar -->
        <Border Grid.Row="3" 
                Background="White" 
                Padding="16,8"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Action Buttons for Selected Ship (Admin Only) -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Visibility="{Binding CanEditData, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button Content="âœï¸ Edit Ship" 
                            Command="{Binding EditShipCommand}"
                            Background="#FFA726"
                            Foreground="White"
                            BorderThickness="0"
                            Height="28"
                            Padding="12,0"
                            FontSize="11"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ—‘ï¸ Delete Ship" 
                            Command="{Binding DeleteShipCommand}"
                            Background="#E53935"
                            Foreground="White"
                            BorderThickness="0"
                            Height="28"
                            Padding="12,0"
                            FontSize="11"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ‘ï¸ View Details" 
                            Command="{Binding ViewDetailsCommand}"
                            Background="#42A5F5"
                            Foreground="White"
                            BorderThickness="0"
                            Height="28"
                            Padding="12,0"
                            FontSize="11"/>
                </StackPanel>

                <!-- View Details Button (For Engineers) -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Visibility="{Binding IsReadOnlyUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button Content="ðŸ‘ï¸ View Details" 
                            Command="{Binding ViewDetailsCommand}"
                            Background="#42A5F5"
                            Foreground="White"
                            BorderThickness="0"
                            Height="28"
                            Padding="12,0"
                            FontSize="11"/>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           FontSize="11"
                           Foreground="#757575"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Total Ships: " 
                               FontSize="11"
                               Foreground="#757575"/>
                    <TextBlock Text="{Binding TotalShips}" 
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#1976D2"/>
                    <TextBlock Text=" | Active: " 
                               FontSize="11"
                               Foreground="#757575"
                               Margin="8,0,0,0"/>
                    <TextBlock Text="{Binding ActiveShips}" 
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#4CAF50"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl> 
