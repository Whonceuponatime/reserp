<Window x:Class="MaritimeERP.Desktop.Views.SystemChangePlanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" 
        Title="System Change Plan Form" 
        Height="800" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="#34495E" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="System Change Plan Form" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="30,0">
                    <TextBlock Text="Created" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                    <CheckBox IsChecked="{Binding IsCreated}" IsEnabled="False" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="30,0">
                    <TextBlock Text="Under Review" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                    <CheckBox IsChecked="{Binding IsUnderReview}" IsEnabled="False" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="30,0">
                    <TextBlock Text="Approved" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                    <CheckBox IsChecked="{Binding IsApproved}" IsEnabled="False" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Basic Information -->
                <Border Grid.Row="0" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Request Number" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="1" Text="{Binding RequestNumber}" 
                                 Padding="15" BorderThickness="0" IsReadOnly="True" FontSize="13"/>
                        
                        <TextBlock Grid.Column="2" Text="Created Date" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <DatePicker Grid.Column="3" SelectedDate="{Binding CreatedDate}" 
                                   Padding="15" BorderThickness="0" FontSize="13"/>
                    </Grid>
                </Border>
                
                <!-- Requester Information Header -->
                <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <TextBlock Text="Requester" 
                              Background="#34495E" 
                              Foreground="White"
                              Padding="15" 
                              FontWeight="Bold" 
                              FontSize="14"/>
                </Border>
                
                <!-- Requester Information Details -->
                <Border Grid.Row="2" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- First row: Department, Position, Full Name -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Department" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="1" Text="{Binding Department}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="2" Text="Position" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="3" Text="{Binding PositionTitle}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                            
                            <TextBlock Grid.Column="4" Text="Full Name" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <TextBox Grid.Column="5" Text="{Binding RequesterName}" 
                                     Padding="15" BorderThickness="0" FontSize="13"/>
                        </Grid>
                        
                        <!-- Second row: Ship Selection -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Ship" 
                                      Background="#ECF0F1" Padding="15" 
                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                            <ComboBox Grid.Column="1" 
                                     ItemsSource="{Binding Ships}"
                                     SelectedItem="{Binding SelectedShip}"
                                     DisplayMemberPath="ShipName"
                                     Padding="15" BorderThickness="0" FontSize="13"
                                     Background="White"/>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- Installation Details -->
                <Border Grid.Row="3" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Installed CBS" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="1" Text="{Binding InstalledCbs}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                        
                        <TextBlock Grid.Column="2" Text="Installed Component" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="3" Text="{Binding InstalledComponent}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                    </Grid>
                </Border>
                
                <!-- Reason -->
                <Border Grid.Row="4" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Request Reason" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"
                                  MinHeight="100"/>
                        <TextBox Grid.Column="1" Text="{Binding Reason}" 
                                 Padding="15" BorderThickness="0" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="100" FontSize="13"/>
                    </Grid>
                </Border>
                
                <!-- Before Change Header -->
                <Border Grid.Row="5" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <TextBlock Text="Before Change" 
                              Background="#34495E" 
                              Foreground="White"
                              Padding="15" 
                              FontWeight="Bold" 
                              FontSize="14"/>
                </Border>
                
                <!-- Before Change Details -->
                <Border Grid.Row="6" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Manufacturer/Model" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="1" Text="{Binding BeforeManufacturerModel}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                        
                        <TextBlock Grid.Column="2" Text="HW/SW Name" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="3" Text="{Binding BeforeHwSwName}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                        
                        <TextBlock Grid.Column="4" Text="Version" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="5" Text="{Binding BeforeVersion}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                    </Grid>
                </Border>
                
                <!-- After Change Header -->
                <Border Grid.Row="7" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <TextBlock Text="After Change" 
                              Background="#34495E" 
                              Foreground="White"
                              Padding="15" 
                              FontWeight="Bold" 
                              FontSize="14"/>
                </Border>
                
                <!-- After Change Details -->
                <Border Grid.Row="8" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Manufacturer/Model" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="1" Text="{Binding AfterManufacturerModel}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                        
                        <TextBlock Grid.Column="2" Text="HW/SW Name" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="3" Text="{Binding AfterHwSwName}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                        
                        <TextBlock Grid.Column="4" Text="Version" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"/>
                        <TextBox Grid.Column="5" Text="{Binding AfterVersion}" 
                                 Padding="15" BorderThickness="0" FontSize="13"/>
                    </Grid>
                </Border>
                
                <!-- Plan Details -->
                <Border Grid.Row="9" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Plan Details" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"
                                  MinHeight="100"/>
                        <TextBox Grid.Column="1" Text="{Binding PlanDetails}" 
                                 Padding="15" BorderThickness="0" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="100" FontSize="13"/>
                    </Grid>
                </Border>
                
                <!-- Security Review -->
                <Border Grid.Row="10" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Security Review Comments" 
                                  Background="#ECF0F1" Padding="15" 
                                  VerticalAlignment="Center" FontWeight="Bold" FontSize="13"
                                  MinHeight="100"/>
                        <TextBox Grid.Column="1" Text="{Binding SecurityReviewComments}" 
                                 Padding="15" BorderThickness="0" 
                                 TextWrapping="Wrap" AcceptsReturn="True" 
                                 MinHeight="100" FontSize="13"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
        
        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="20" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <!-- Save/Submit Buttons (for normal users and non-admin viewing) -->
                <Button Content="Save" 
                        Command="{Binding SaveCommand}"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowSaveSubmitButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <Button Content="Submit" 
                        Command="{Binding SubmitCommand}"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowSaveSubmitButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Admin Approve/Reject Buttons (for admin viewing submitted forms) -->
                <Button Content="✅ Approve" 
                        Command="{Binding ApproveCommand}"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowApproveRejectButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <Button Content="❌ Reject" 
                        Command="{Binding RejectCommand}"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"
                        Visibility="{Binding ShowApproveRejectButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Cancel Button (always visible) -->
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Height="40"
                        Padding="25,0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window> 