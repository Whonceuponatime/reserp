<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Status Colors -->
    <SolidColorBrush x:Key="StatusActiveBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="StatusInactiveBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="StatusPendingBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="StatusCompletedBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="StatusRejectedBrush" Color="#F44336"/>

    <!-- Priority Colors -->
    <SolidColorBrush x:Key="PriorityHighBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="PriorityMediumBrush" Color="#F57C00"/>
    <SolidColorBrush x:Key="PriorityLowBrush" Color="#388E3C"/>

    <!-- Category Colors -->
    <SolidColorBrush x:Key="CategoryNavigationBrush" Color="#3F51B5"/>
    <SolidColorBrush x:Key="CategoryEngineBrush" Color="#795548"/>
    <SolidColorBrush x:Key="CategoryCargoBrush" Color="#607D8B"/>
    <SolidColorBrush x:Key="CategoryCommunicationBrush" Color="#009688"/>
    <SolidColorBrush x:Key="CategorySafetyBrush" Color="#FF5722"/>
    <SolidColorBrush x:Key="CategoryEntertainmentBrush" Color="#9C27B0"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#1976D2" Offset="0"/>
        <GradientStop Color="#0D47A1" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F8F9FA" Offset="1"/>
    </LinearGradientBrush>

    <!-- Hover and Focus Colors -->
    <SolidColorBrush x:Key="HoverBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="FocusBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="#BBDEFB"/>

    <!-- Chart Colors -->
    <SolidColorBrush x:Key="Chart1Brush" Color="#1976D2"/>
    <SolidColorBrush x:Key="Chart2Brush" Color="#00796B"/>
    <SolidColorBrush x:Key="Chart3Brush" Color="#F57C00"/>
    <SolidColorBrush x:Key="Chart4Brush" Color="#388E3C"/>
    <SolidColorBrush x:Key="Chart5Brush" Color="#7B1FA2"/>
    <SolidColorBrush x:Key="Chart6Brush" Color="#D32F2F"/>

    <!-- Theme Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#64B5F6"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="PrimaryDarkerBrush" Color="#1565C0"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="DangerDarkBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="DangerDarkerBrush" Color="#C62828"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>

</ResourceDictionary> 